<h1>{{title}}</h1>
<a class="btn btn-default btn-xs" {{action 'toggleAuthorForm'}}>
  <span class="glyphicon glyphicon-plus-sign"></span>
  Add new
</a>
<div {{bind-attr class=":author-form showNewAuthorForm"}}>
  {{view ETahi.AddAuthorView newAuthor=newAuthor}}
</div>

{{#if paper.authors}}
  <table class="table table-striped table-bordered author-table">
    <thead>
      <th>Name</th>
      <th>Email</th>
      <th>Affiliation</th>
    </thead>
    <tbody>
    {{#each author in paper.authors}}
    <tr>
      <td>{{author.first_name}} {{author.last_name}}</td>
      <td>{{author.email}}</td>
      <td>{{author.affiliation}}</td>
    </tr>
    {{/each}}
    </tbody>
  </table>
{{/if}}

