<tr class="user-row">
  <td class='last-name'  {{action "displayDialog"}}>{{user.lastName}}</td>
  <td class='first-name' {{action "displayDialog"}}>{{user.firstName}}</td>
  <td class='username'   {{action "displayDialog"}}>{{user.username}}</td>
  {{#if journalRoles}}
    <td class='user-role'>
      {{user-role-selector journalRoles=journalRoles
        userJournalRoles=user.adminJournalRoles
        selected=(action "addRole")
        removed=(action "removeRole")}}
    </td>
  {{/if}}
</tr>
