{{#if hasReport}}
  <ol class="question-list">
    <li class="question">
      {{nested-question-radio-decision
        ident="front_matter_reviewer_report--decision_term"
        owner=report
        readOnly=readOnly
      }}
    </li>

    <li class="question">
      {{nested-question-textarea
        ident="front_matter_reviewer_report--competing_interests"
        editorStyle='plain'
        owner=report
        displayContent=true
        disabled=readOnly
        helpText=(concat "
          Please review our <a href='"competingInterestsLink "'>
          Competing Interests policy</a> and declare any potential interests that you feel the Editor should be aware of when considering your review.")
        }}
    </li>

    <li class="question">
        {{#nested-question-radio
          ident="front_matter_reviewer_report--suitable"
          owner=report
          wrapperClass="yes-no-with-comments"
          helpText="Do you think this manuscript is suitable, in principle, for the magazine section of <em>PLOS Biology</em>? What recommendations do you have for revisions that might make the manuscript suitable?
          <p><strong>Please refer to our <a href='http://journals.plos.org/plosbiology/s/reviewer-guidelines#loc-reviewing-magazine-submissions' target='_blank'>reviewer guidelines</a> and information on our <a href='http://journals.plos.org/plosbiology/s/other-article-types' target='_blank'>article types</a>.</strong></p><p>Your review comments will be communicated to the authors.</p>"
          readOnly=readOnly as |radio|}}

          {{#if radio.yieldingForAdditionalData}}
            {{nested-question-textarea
              ident="front_matter_reviewer_report--suitable--comment"
              editorStyle='expanded'
              owner=report
              displayQuestionText=false
              displayContent=true
              noResponseText=""
              disabled=readOnly
            }}
          {{/if}}
        {{/nested-question-radio}}
    </li>

    <li class="question">
      {{#nested-question-radio
        ident="front_matter_reviewer_report--includes_unpublished_data"
        owner=report
        unwrappedHelpText="<ul class=\"question-help\"><li>The data have been generated rigorously with relevant controls, replication and sample sizes, if applicable.</li><li>The data provided support the conclusions that are drawn.</li></ul><div class=\"question-help\">These comments will be communicated to the authors.</div>"
        wrapperClass="yes-no-with-comments"
        readOnly=readOnly
        showUnwrappedHelpText=true as |radio|}}

        {{#if radio.yieldingForAdditionalData}}
          {{nested-question-textarea
            ident="front_matter_reviewer_report--includes_unpublished_data--explanation"
            editorStyle='plain'
            owner=report
            noResponseText=""
            displayQuestionText=false
            displayContent=true
            disabled=readOnly}}
        {{/if}}
      {{/nested-question-radio}}
    </li>

    <li class="question">
      {{nested-question-textarea
        ident="front_matter_reviewer_report--additional_comments"
        editorStyle='plain'
        owner=report
        displayContent=true
        helpText="Additional comments may include concerns about dual publication, research or publication ethics."
        disabled=readOnly
      }}
    </li>

    <li class="question">
      {{nested-question-textarea
        ident="front_matter_reviewer_report--identity"
        editorStyle='plain'
        owner=report
        displayContent=true
        helpText="Your name and review will not be published with the manuscript."
        disabled=readOnly
      }}
    </li>

    <li class="question">
        {{nested-question-uploader-manager ident='front_matter_reviewer_report--attachments'
                         buttonText="upload file"
                         hasCaption=false
                         multiple=true
                         owner=report
                         disabled=readOnly}}
    </li>
  </ol>
{{/if}}
