<h1>Register Decision</h1>
<div class="decision-selections">
  {{view
    ETahi.DecisionRadioButton
    name="decision"
    model=model.paper
    selection=model.paper.decision
    id="accepted_option"
    value="accepted"}}
  <label class="decision-label" for="accepted_option">
    Accepted
  </label>

  {{view
    ETahi.DecisionRadioButton
    name="decision"
    model=model.paper
    selection=model.paper.decision
    id="rejected_option"
    value="rejected"}}
  <label class="decision-label" for="rejected_option">
    Rejected
  </label>

  {{view
    ETahi.DecisionRadioButton
    name="decision"
    model=model.paper
    selection=model.paper.decision
    id="revise_option"
    value="revise"}}
  <label class="decision-label" for="revise_option">
    Revise
  </label>
</div>

<div>
  <p class="decision-letter-description">Feel free to modify the standard decision letter. Your changes will be saved.</p>
  {{view ETahi.TextArea
    model=model.paper
    id="task_paper_decision_letter"
    class="task_paper_decision_letter"
    placeholder="A boilerplate decision letter will appear here"
    value=model.paper.decisionLetter}}
</div>
