{{#if model.doi}}
  <div class="task-list-doi"><strong>DOI:</strong> {{model.doi}}</div>
{{/if}}

{{#if assignedTasks}}
  <div id="paper-assigned-tasks">
    {{#each sortedAssignedTasks as |task|}}
      {{card-preview paper=model
                     task=task
                     commentLooks=commentLooks
                     action="viewCard"}}
    {{/each}}
  </div>
  <hr>
{{/if}}

{{#if metadataTasks}}
  <div id="paper-metadata-tasks">
    {{#each sortedMetadataTasks as |task|}}
      {{card-preview paper=model
                     task=task
                     commentLooks=commentLooks
                     action="viewCard"}}
    {{/each}}
  </div>
{{/if}}
