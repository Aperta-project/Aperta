<%= render partial: 'email/journal_logo_or_name', locals: { journal: @paper.journal } %>
<br><br>

<p>Hello <%= @assigner.first_name %></p>

<p>
  <%= @reviewer_name %> has declined your invitation to review the Manuscript: "<%= @paper.display_title(sanitized: false) %>".
</p>

<p class="decline_reason">
  <strong>Reason:</strong> <%= @invitation.decline_reason.html_safe %>
</p>
<p class="reviewer_suggestions">
  <strong>Reviewer Suggestions:</strong> <%= @invitation.reviewer_suggestions.html_safe %>
</p>

<%= render partial: 'email/button', locals: {
  href: client_paper_task_url(@paper, @invite_reviewer_task),
  text: 'View Your Invitation'
} %>

<%= render partial: 'email/journal_signature', locals: { journal: @paper.journal } %>
