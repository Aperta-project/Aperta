- content_for :nav_bar_items do
  %li.nav-bar-item= link_to 'Article Page', '#', class: 'active'

- content_for :control_bar do
  #control-bar-container
    #control-bar
      %section
        %ul
          %li#paper-journal= @paper.journal.name
          %li#paper-short-title{contenteditable: true, placeholder: 'Type your short title here'}= @paper.short_title
          %li#paper-revision R0
        %ul
          - if current_user.admin?
            %li= link_to 'Task Manager', manage_paper_path(@paper)
          %li
            = link_to 'Save', paper_path(@paper, format: :json), id: 'save-button', class: 'primary-button'
          %li
            = link_to 'Submit', new_paper_submission_path(@paper), class: 'primary-button'

%main
  %article
    %div
      #toolbar

      .title
        %h2#paper-title{contenteditable: true, placeholder: 'Type your article title here'}
          = @paper.title

      #paper-abstract{contenteditable: true, placeholder: 'Type your abstract here'}
        = @paper.abstract.html_safe

      #paper-authors.editable{data: { 'overlay-name' => 'authors', 'overlay-title' => @paper.short_title }}
        %span.placeholder Click here to add authors

      #authors-content.hidden
        = render 'overlays/authors'
      = render 'overlays/author_form'

      #paper-body.editable{contenteditable: true, placeholder: 'Type the body of your article here'}
        = @paper.body.html_safe

  %aside
    %div
      - task = Task.where(title: "Declarations", phase: @paper.phases.where(name: 'Submit Paper').first).first
      = link_to '#', class: "card #{'completed' if task.completed?}", data: { 'card-name' => "declarations", 'paper-title' => @paper.short_title, 'paper-path' => paper_path(@paper), 'paper-id' => @paper.to_param, 'task-path' => paper_task_path(@paper, task), 'task-completed' => task.completed?, declarations: @paper.declarations.map { |d| d.slice(:question, :answer, :id) }.to_json } do
        %span.glyphicon.glyphicon-ok
        = task.title

      = link_to 'Upload Figures', '#', data: { 'overlay-name' => 'upload-figures', 'overlay-title' => @paper.short_title }, class: 'card'
      #upload-figures-content.hidden
        = render 'overlays/figures'

      = link_to 'Upload Manuscript', '#', data: { 'overlay-name' => 'upload-manuscript', 'overlay-title' => @paper.short_title }, class: 'card'
      #upload-manuscript-content.hidden
        = render 'overlays/upload_manuscript'

      = form_for @paper, remote: true, format: :json, html: { class: 'js-submit-on-change' } do |f|
        .form-group
          = f.label :paper_type
          = f.select :paper_type, Paper::PAPER_TYPES.map { |t| [t.humanize, t] }

