<div class='container'>
  <div class='greeting'>
    <p class='message'>
      You've been invited to be a reviewer on a manuscript
    </p>
  </div>
  <hr>
  <div class='paper-info'>
    <div class='journal-info'>
      <% if @paper.journal.logo_url %>
        <img class='journal-logo' src='<%= @paper.journal.logo_url %>'>
      <% else %>
        <div class='journal-name'>
          <%= @paper.journal.name %>
        </div>
      <% end %>
    </div>
    <p>
      Hello <%= @invitee.full_name %>,
    </p>
    <p class='message'>
      You've been invited to be a reviewer on a manuscript
    </p>

    <div class='paper-name'>
      <%= @paper.display_title %>
    </div>

    <div>
      <%= simple_format @task.body[0] %>
    </div>

    <p>
      <a class='button' href='<%= client_paper_url(@paper) %>' target='_blank'>
        View Paper
      </a>
    </p>
  </div>
  <hr>
  <div class='footer'>
    Sincerely,
    <br>
    <%= @paper.journal.name %> Team
  </div>
</div>
