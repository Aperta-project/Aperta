<div class="form-group">
  <p class="picker-title">{{{content.text}}}
    {{#if content.isRequired}}
      <span class="required-field">{{#unless answer.wasAnswered}}*{{else}}&nbsp;{{/unless}}</span>
    {{/if}}</p>
  <div class="inset-form-control {{if validationErrors.publicationDate "error"}}">

    {{date-picker
        name=name
        type="text"
        value=answer.value
        date=answer.value
        dateChanged="valueChanged"
        answer=answer
        disabled=disabled
        content=content}}
  </div>
  {{card-content/validation-errors content=content errors=answer.readyIssuesArray}}
</div>
