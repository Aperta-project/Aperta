{{input id=inputId value=resultText bubbles=true placeholder=placeholder name=inputName class="auto-suggest-no-border"}}

{{#if searching}}
  {{progress-spinner visible=true size="small"}}
{{/if}}

{{#if searchResults}}
  {{#auto-suggest-list class="animation-fade-in"
                       positionNearSelector=positionNearSelector
                       selectItem="selectItem"
                       selectUnknownItem="selectUnknownItem"
                       highlightedItem=highlightedItem
                       setMaxHeight=true
                       items=searchResults as |item|}}
    {{yield item}}
  {{/auto-suggest-list}}
{{/if}}
