{
  "app/assets/javascripts/models/*.js.coffee": {
    "command": "jmodel",
    "alternate": "spec/models/%s_spec.js",
    "template": "ETahi.%S = DS.Model.extend({\n});"
  },

  "app/assets/javascripts/controllers/*.js.coffee": {
    "command": "jcontroller",
    "alternate": "spec/controllers/%s_spec.js",
    "template": "ETahi.%SController = Ember.ObjectController.extend({\n});"
  },

  "app/assets/javascripts/views/*.js.coffee": {
    "command": "jview",
    "alternate": "spec/views/%s_spec.js",
    "related": "app/js/javascripts/templates/%s.hbs",
    "template": "%SView = Ember.View.extend({\n});"
  },

  "app/assets/javascripts/router.js.coffee": {
    "command": "jrouter"
  },

  "app/assets/javascripts/routes/*.js.coffee": {
    "command": "jroute",
    "alternate": "spec/routes/%s_spec.js",
    "template": "ETahi.%SRoute = Ember.Route.extend({\n});"
  },

  "app/assets/javascripts/templates/*.hbs": {
    "command": "jtemplate",
    "alternate": "app/assets/javascripts/views/%s.js.coffee"
  },

  "app/assets/stylesheets/*.css.scss": {
    "command": "css",
  },

  "app/assets/stylesheets/screens/*.css.scss": {
    "command": "cssscreen",
  },

  "app/assets/stylesheets/ui/*.css.scss": {
    "command": "cssui",
  },
}
