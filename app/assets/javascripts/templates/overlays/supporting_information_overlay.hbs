<h1>{{model.title}}</h1>

{{#if isEditable}}
  <span class="button-secondary button--green fileinput-button">
    <span>Add New Supporting Information</span>
    {{file-uploader id="file_attachment"
                    filePrefix="supporting-info"
                    url=uploadUrl
                    start='uploadStarted'
                    done='uploadFinished'
                    progress='uploadProgress'}}
  </span>
{{/if}}
<div id="paper-file-uploads">
  {{#each upload in uploads}}
    {{upload-preview upload=upload}}
  {{/each}}
</div>

<div class="paper-figures">
  {{#if isEditable}}
    {{#each file in paper.supportingInformationFiles}}
      {{attachment-thumbnail attachment=file}}
    {{/each}}
  {{else}}
    {{#each file in paper.supportingInformationFiles}}
      {{partial 'figure_show_only'}}
    {{/each}}
  {{/if}}
</div>
