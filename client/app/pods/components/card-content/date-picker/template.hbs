<div class="inset-form-control {{if validationErrors.publicationDate "error"}}">
  {{#card-content/label content=content}}
    {{date-picker
      name=name
      type="text"
      value=answer.value
      date=answer.value
      dateChanged="valueChanged"
      answer=answer
      disabled=disabled
      content=content
    }}
  {{/card-content/label}}

 {{card-content/validation-errors content=content hideErrors=answer.hideErrors errors=answer.readyIssuesArray}}
</div>
