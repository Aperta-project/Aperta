{{#if (can "manage_workflow" paper)}}
{{#overlay-fullscreen visible=showCorrespondenceOverlay
                      outAnimationComplete=(action "hideCorrespondenceOverlay")
                      title="Correspondence Record"
                      overlayClass="correspondence-overlay"
                      as |overlay|}}
    {{correspondence-details message=message}}
{{/overlay-fullscreen}}
  <div class="correspondence-table">
    <table class="table table-hover">
      <thead>
        <tr>
          <th class="correspondence-date-column">Date</th>
          <th class="correspondence-subject-column">Subject</th>
          <th class="correspondence-recipient-column">Recipient</th>
          <th class="correspondence-sender-column">Initiator</th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |message|}}
          <tr>
            <td>{{format-date message.date}}</td>
            <td><a href="{{this.baseUrl}}/viewcorrespondence/{{message.id}}" {{action "showCorrespondenceOverlay" message}}>{{message.subject}}</a></td>
            <td>{{message.recipient}}</td>
            <td>{{message.sender}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{/if}}
