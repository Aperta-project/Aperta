ETahi.AdminIndexController = Ember.ArrayController.extend
  sortProperties: ['createdAt']
  sortAscending: true

  seached: false

  actions:
    addNewJournal: ->
      @store.createRecord 'adminJournal', logoUrl: "<%= asset_path('no-journal-image.gif') %>"

    searchUsers: ->
      @store.find('AdminJournalUser', {query: @get('searchQuery')}).then (users) =>
        @set 'adminJournalUsers', users
        @set 'searched', true

