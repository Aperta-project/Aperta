<h2>Email Templates</h2>

{{#if journal}}
  <button class="button-primary button--blue">
    ADD EMAIL TEMPLATE
  </button>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Subject</th>
        <th><!-- --></th>
      </tr>
    </thead>
    <tbody>
      {{#each templates as |template|}}
        <tr class="admin-email-template-row">
          <td>{{template.text}}</td>
          <td>{{template.subject}}</td>
          <td>
            <a href="#">{{fa-icon "pencil"}} Edit</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>Please select a journal to view email templates</p>
{{/if}}
