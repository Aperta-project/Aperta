<label>{{input type="checkbox" checked=model.answer}} {{model.question}}</label>
{{#if template}}
  <div {{bind-attr class=":additional-data model.answer::hidden"}}>
    {{yield}}
    {{#if multipleAdditionalData}}
      <button class="btn btn-default btn-xs" {{action 'additionalDataAction'}}>
        <span class="glyphicon glyphicon-plus-sign"></span>
        Add Dataset
      </button>
    {{/if}}
  </div>
{{/if}}
