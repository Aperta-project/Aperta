<p class="content-text">
  {{{content.text}}}
  {{#if content.isRequired}}
    <span class="required-field">*</span>
  {{/if}}
</p>

{{card-content/validation-errors errors=answer.readyIssuesArray}}

<div class="checkbox">
  {{check-box
    name=name
    id=name
    checked=answer.value
    disabled=disabled
    content=content
    answer=answer
    action="valueChanged"
  }}
</div>

<div>
  {{card-content/validation-errors errors=answer.readyIssuesArray}}
</div>

{{card-content/display-children
  content=content
  owner=owner
  disabled=disabled
  preview=preview
}}
