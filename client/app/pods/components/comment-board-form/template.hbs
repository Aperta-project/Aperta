{{#expanding-textarea}}
  {{at-mentionable-textarea
      atMentionableUsers=atMentionableUsers
      classNames="new-comment-field"
      focus-in=(action 'startEditing')
      value=comment
      onChange=(action "onChange")
      placeholder="Type your message here"}}
{{/expanding-textarea}}


<div class="message-comment-buttons">
  {{#if editing}}
    <button type="submit" class="new-comment-submit-button button-secondary button--green" {{action "save"}}>
      Post Message
    </button>
    <a href="#" class="button-link cancel-link" {{action "cancel"}}>Cancel</a>
  {{/if}}
</div>
