<table id="permission-table">
  <thead>
    <tr>
      <th></th>
      <th class="permission centered">READ<br>Can view the card content</th>
      <th class="permission centered">WRITE<br>Can answer questions and interact with the card</th>
      <th class="permission centered">READ<br>Can view discussions</th>
      <th class="permission centered">WRITE<br>Can comment in discussions</th>
      <th class="permission centered">WRITE<br>Can be assigned </th>
      <th class="permission centered">WRITE<br>Can assign others</th>
      <th class="permission centered">READ<br>Can view card discussion participants</th>
      <th class="permission centered">WRITE<br>Can manage card discussion participants </th>
    </tr>
  </thead>
  <tbody>
    {{#each roles as |role| }}
      {{card-editor/permissions/role
          role=role
          card=card
          turnOnPermission=turnOnPermission
          turnOffPermission=turnOffPermission}}
    {{/each}}
  </tbody>
</table>
