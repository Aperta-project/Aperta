<tbody class='active-invitations'>
  {{#each latestDecision.invitations as |invitation|}}
  <tr class='invitation'>
    <td><span>{{user-thumbnail user=invitation.invitee classNames='invitee-thumbnail'}}</span></td>
    <td><span class='invitee-full-name'>{{invitation.inviteeFullName}}</span> has been invited</td>
    <td><span class='invitation-updated-at'>{{format-date invitation.updatedAt format='LLL'}}</span></td>
    <td><span class='invitation-state'>({{invitation.state}})</span></td>
    {{#unless invitation.accepted}}
    <td>
      <span class='glyphicon glyphicon-trash invite-reviewer-remove' {{action 'destroyInvitation' invitation}}></span>
    </td>
    {{/unless}}
  </tr>
  {{/each}}
</tbody>
