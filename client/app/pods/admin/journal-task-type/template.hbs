<div class="individual-task-type">
  <p>{{model.title}}</p>
  <div class="role-dropdown">
    {{view "chosen" content=availableTaskRoles
                    name="roles"
                    width="150px"
                    class="collaborator-select"
                    prompt="No Role Assigned"
                    optionValuePath="content.kind"
                    optionLabelPath="content.name"
                    changeAction='save'
                    value=role}}

  </div>
  <span class="autosave">
    {{autosave-icon isSaving=model.isSaving}}
  </span>
</div>
