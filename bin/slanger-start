#!/usr/bin/env ruby
require "bundler"
require "dotenv"

Bundler.with_clean_env do
  raise "You must pass RAILS_ENV when launching this script" unless ENV
  Dotenv.load(".env.#{ENV.fetch("RAILS_ENV")}")
  Dir.chdir("../tahi-slanger") do
    exec("bin/slanger --app_key #{ENV.fetch("EVENT_STREAM_KEY")} --secret #{ENV.fetch("EVENT_STREAM_SECRET")} -v")
  end
end
