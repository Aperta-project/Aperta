<div class="epub-cover">
  <div class="admin-header row">
    <div class='relative'>
      <h2 class="title col-md-5">Default ePub Cover</h2>
        <div id="epub-cover-spinner"></div>

        <div class="epub-cover-image col-md-5 text-right">
          {{#if epubCoverUrl}}
            <a {{bind-attr href=epubCoverUrl}} target='_blank'>{{epubCoverFileName}}</a>
          {{else}}
            <p>There is currently no default ePub cover.</p>
          {{/if}}
        </div>

      <div class='epub-cover-upload col-md-2 pull-right'>
        <span class="primary-button blue-box fileinput-button">
          Upload ePub Cover
          {{file-uploader id="epub-cover-upload"
                          name="admin_journal[epub_cover]"
                          class="js-jquery-fileupload primary-button blue-box"
                          accept=".jpg,.jpeg"
                          progress='epubCoverUploading'
                          done='epubCoverUploaded'
                          url=epubCoverUploadUrl}}
        </span>
      </div>
    </div>
  </div>
</div>
