<div class="overlay-container choose-card-type-overlay">
  <div id="choose-card-type">
    <h2>Pick the type of card to add</h2>

    <div id="choose-card-type-buttons">
      {{chosen content=taskTypes
               name="task_types"
               width="150px"
               prompt="Select a task type"
               class="task-type-select"
               value=task_type
               optionValuePath="content"
               optionLabelPath="content"}}
      <button class="primary-button message" {{action "addTaskType" phase task_type}}>
        Add
      </button>
      <a class="cancel" {{action 'closeOverlay'}}>cancel</a>
    </div>
  </div>
</div>
