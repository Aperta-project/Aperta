<nav role="navigation" id="control-bar">
  <img id="control-bar-paper-journal-logo" src={{paper.journal.logoUrl}} />

  <div id="control-bar-paper-title">
    <span>{{{paper.title}}}</span>
  </div>

  <span class="spacer" aria-hidden="true"></span>

  {{#if (can "manage_workflow" paper)}}
    {{#link-to "paper.workflow" paper class="control-bar-button" id="nav-workflow"}}
      Go to Workflow
    {{/link-to}}
  {{/if}}

  {{#if versioningMode}}
    {{#link-to "paper.index" paper class="control-bar-button" id="nav-exit-versions"}}
      {{fa-icon icon="files-o"}}
      Exit Versions
    {{/link-to}}
  {{else}}
    {{#link-to "paper.versions" paper class="control-bar-button" id="nav-versions"}}
      {{fa-icon icon="files-o"}}
      Versions
    {{/link-to}}
  {{/if}}

  <div class="control-bar-button" {{action "showSubNav" "contributors"}} id="nav-collaborators">
    {{fa-icon icon="user"}}
    Collaborators
  </div>

  <div class="control-bar-button" {{action "showSubNav" "downloads"}} id="nav-downloads">
    {{fa-icon icon="download"}}
    Downloads
  </div>

  <div class="control-bar-button" {{action "showActivity" "manuscript"}} id="nav-recent-activity">
    {{partial "svg/heartbeat"}}
    Recent Activity
  </div>

  {{#link-to topicsIndexPath paper class="control-bar-button"  id="nav-discussions"}}
    {{fa-icon icon="comments"}}
    {{notification type="paper" id=paper.id}}
    Discussions
  {{/link-to}}

  {{#basic-popover as |popover|}}
    {{#popover.trigger class="control-bar-button last more-dropdown-menu"}}
      {{fa-icon icon="ellipsis-v"}}
      More
    {{/popover.trigger}}
    {{#popover.content class="popover-menu add-new-author-dropdown"}}
      <div class="popover-menu-content">
        {{#unless paperWithdrawn}}
          {{#if (can "withdraw" paper)}}
            <a href="#" class="popover-menu-item withdraw-link" {{action "withdrawManuscript"}}  id="nav-withdraw-manuscript">
              <span class="fa fa-trash fa-lg"></span>
              Withdraw Manuscript
            </a>
          {{/if}}
        {{/unless}}
      </div>
    {{/popover.content}}
  {{/basic-popover}}


  {{#basic-dropdown as |dropdown|}}
    {{#dropdown.content class="popover-menu"}}
      {{#unless paperWithdrawn}}
        {{#if (can "withdraw" paper)}}
          <a href="#" class="withdraw-link" {{action "withdrawManuscript"}}  id="nav-withdraw-manuscript">
            <span class="fa fa-trash fa-lg"></span>
            Withdraw Manuscript
          </a>
        {{/if}}
      {{/unless}}
    {{/dropdown.content}}
  {{/basic-dropdown}}

  {{#if submenuVisible}}
    <div class="control-bar-sub-items">
      {{#if contributorsVisible}}
        <div class="contributors active animation-fade-in">
          {{#if (can "manage_collaborators" paper)}}
            <a class="contributors-add" {{action "addContributors"}} id="nav-add-collaborators">Add Collaborators</a>
          {{/if}}

          {{#each paper.collaborators as |contributor|}}
            <div class="contributor">{{unbound contributor.fullName}}</div>
          {{/each}}
        </div>
      {{/if}}

      {{#if versionsVisible}}
        {{paper-version-picker paper=paper
                               setQueryParam=setQueryParam
                               viewingVersion=viewingVersion
                               comparisonVersion=comparisonVersion}}
      {{/if}}

      {{#if downloadsVisible}}
        <div class="manuscript-download-links active animation-fade-in">
          {{#each supportedDownloadFormats as |downloadType|}}
            <a href="#" {{action "exportDocument" downloadType}} class="{{unbound downloadType.format}}" title="Download {{unbound downloadType.format}}">
              {{downloadType.display}}
              {{partial downloadType.icon}}
            </a>
          {{/each}}

          {{#direct-download-link link=downloadLink extension=".pdf"}}
            pdf
            {{partial "svg/pdf-icon"}}
          {{/direct-download-link}}
        </div>
      {{/if}}
    </div>
  {{/if}}
</nav>
