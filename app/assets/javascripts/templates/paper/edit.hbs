<div class="control-bar">
  <div class="control-bar-inner-wrapper">
    <ul>
      <li id="control-bar-paper-journal-logo">
        {{#if journal.logoUrl}}
          <img src="{{unbound journal.logoUrl}}">
        {{else}}
          <div class="paper-journal">{{unbound journal.name}}</div>
        {{/if}}
      </li>
    </ul>
    <ul>
      <li><a href="{{unbound downloadLink}}" class="control-bar-link">Download ePub</a></li>
      <li>{{link-to "Manuscript Manager" "paper.manage" model class="control-bar-link"}}</li>
    </ul>
  </div>
</div>

<div id="tahi-container">
  <main>
    <article>
      <div>
        <div class="title">
          {{content-editable tagName="h2"
                             id="paper-title"
                             placeholder="Type your manuscript title here"
                             value=title
                             preventEnterKey="true"}}
        </div>

        <div id="paper-authors" {{bind-attr class="noAuthors:placeholder"}} {{action "viewCard" addAuthorsTask}}>
          {{authorNames}}
        </div>

        <div id="paper-abstract" contenteditable="true" placeholder="Type your abstract here">
          {{abstract}}
        </div>

        <div id="paper-body" class="editable" placeholder="Type the body of your manuscript here"></div>
      </div>
    </article>
    <aside>
      <div>
        {{#if assignedTasks}}
          <div id="paper-assigned-tasks">
            {{each assignedTasks itemViewClass="ETahi.CardView"}}
          </div>
          <hr>
        {{/if}}
        {{#if authorTasks}}
          <div id="paper-metadata-tasks">
            {{each authorTasks itemViewClass="ETahi.CardView"}}
          </div>
          <hr>
        {{/if}}
        <a class="primary-button wide-button" href="#" {{action "submit" target="view"}}>Submit</a>
        <a class="primary-button wide-button" href="#" {{action "save"   target="view"}}>Save</a>
      </div>
    </aside>
  </main>
</div>
