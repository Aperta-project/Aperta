<label class="{{labelClassNames}}">
  {{check-box name=ident checked=isChecked disabled=disabled action="checkboxToggled"}}
  {{#if shouldDisplayQuestionText}}
    <p class="{{textClassNames}}">{{{questionText}}}</p>
  {{else}}
    {{yield (hash checked=isChecked
                  unchecked=(not isChecked)
                  yieldingForText=true)}}
  {{/if}}
</label>

{{#if hasBlock}}
  <div class="additional-data">
  {{yield (hash checked=isChecked
                unchecked=(not isChecked)
                yieldingForAdditionalData=true)}}</div>
{{/if}}
