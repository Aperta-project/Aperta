<tr>
  <td>{{input name="title" value=title}}</td>
  <td>
    {{chosen content=availableTaskRoles
             name="roles"
             width="150px"
             class="collaborator-select"
             changeAction="updateRole"
             prompt="No Role Assigned"
             optionValuePath="content.name"
             optionLabelPath="content.name"
             value=role}}
  </td>
  <td>{{taskType.kind}}</td>
  <td>
    <div {{bind-attr class="isEditing::hidden"}}>
      <button class="column-header-update-save button-primary button--blue" {{action "save" bubbles=false}}>Save</button>
      <button class="column-header-update-cancel button-link button--blue" {{action "cancel" bubbles=false}}>cancel</button>
    </div>
  </td>
</tr>
