<a href={{href}} {{action "viewCard"}} data-id="{{task.id}}">
  {{#if unreadCommentsCount}}
    <span class="badge badge--red unread-comments-count">{{unreadCommentsCount}}</span>
  {{/if}}
  {{#if versioned}}
    {{#if hasDiff}}
      <i class="card-diff-icon fa fa-files-o"></i>
    {{/if}}
  {{else}}
    {{#unless taskTemplate}}
      <div class="task-disclosure-completed-icon {{if task.completed "active"}}">
        {{partial "svg/check"}}
      </div>
    {{/unless}}
  {{/if}}
  <span class="card-title {{if disabled "disabled"}}">{{task.title}}</span>
</a>

{{#if canRemoveCard}}
  <span {{action "promptDelete" bubbles=false}} class="card-remove" title="Delete Card"></span>
{{/if}}
