{{#view ETahi.ControlBarView}}
  <div class="control-bar-inner-wrapper">
    <ul>
      <li class="control-bar-item">
        <div class="control-bar-link add-flow-column-button __with-icon" {{action "chooseNewFlowManagerColumn"}}>
          <div class="control-bar-link-icon"><span class="glyphicon glyphicon-plus"></span></div>
          <div class="control-bar-link-text">Add New Column</div>
        </div>
      </li>
    </ul>
  </div>
{{/view}}

<ul class="columns">
  {{#each flow in model}}
    {{flow-column flow=flow
                  litePaper=litePaper
                  commentLooks=commentLooks
                  editable=false
                  saveFlow="saveFlow"
                  removeFlow="removeFlow"
                  viewCard="viewCard"}}
  {{/each}}
</ul>
