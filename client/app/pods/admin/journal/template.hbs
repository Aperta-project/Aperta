{{#view "controlBar"}}
  <div class="control-bar-inner-wrapper">
    <ul>
      <li id="control-bar-paper-journal-logo" class="control-bar-item">
        {{#if logoUrl}}
          <img src="{{unbound journal.logoUrl}}">
        {{else}}
          <div class="paper-journal">{{unbound name}}</div>
        {{/if}}
      </li>
      <li class="control-bar-item control-bar-page-title">
        {{#link-to "admin.journal" model}}Journal Administration{{/link-to}}
      </li>
    </ul>
    <ul>
      <li class="template-edit-message control-bar-item">
        <span {{bind-attr class="errorText:show:hidden :alert-danger :control-bar-message"}}>{{errorText}}</span>
      </li>
      {{outlet "controlBarButtons"}}
    </ul>
  </div>
{{/view}}

{{flash-messages classNames="flash-messages--below-control-bar"}}

{{outlet}}
