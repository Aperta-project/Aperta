<h1 class="inline-edit {{if editing "editing"}}">
  {{title}}
  {{#if canManage}}
    <span class="fa fa-pencil inline-edit-icon" {{action "edit"}}></span>
  {{/if}}
</h1>

<div class="large-edit inline-edit-form {{if editing "editing"}}">
  {{input type="text" name="title" value=title class="title--test"}}
  <div class="button-secondary button--green pull-right" {{action "save"}}>Save</div>
  <div class="button-link button--green pull-right" {{action "cancel"}}>Cancel</div>
</div>
