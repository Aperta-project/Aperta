{{#if generalCase}}
  {{#if raw}}
    <div class="snapshot-text">
      {{snapshot.value}}
    </div>
  {{/if}}

  {{#if boolean}}
    <div class="snapshot-text">
      <label><input type="radio" value="true" disabled>{{#if snapshot.value}}Yes{{else}}No{{/if}}.</label>
    </div>
  {{/if}}

  {{#if question}}
    <li class="snapshot-question">
        <div class="snapshot-question-question">
        {{{snapshot.value.title}}}
      </div>

      {{#if booleanQuestion}}
        <div class="snapshot-question-answer">
            <span class="snapshot-question-label">Response: </span>{{#if snapshot.value.answer}}Yes{{else}}No{{/if}}
        </div>
      {{else}}
        <div class="snapshot-question-answer">
            {{snapshot.value.answer}}
        </div>
      {{/if}}

      {{#if snapshot.value.attachment}}
        <div class="snapshot-question-attachment">
          <span class="snapshot-question-label">Attachment: </span>
          <a href="{{snapshot.value.attachment}}">{{snapshot.value.attachment}}</a>
        </div>
        <div class="snapshot-question-attachment">
          <span class="snapshot-question-label">Attachment: </span>
          <a href="{{snapshot.value.attachment}}">{{snapshot.value.attachment}}</a>
        </div>
        <div class="snapshot-question-attachment">
          <span class="snapshot-question-label">Attachment: </span>
          <a href="{{snapshot.value.attachment}}">{{snapshot.value.attachment}}</a>
        </div>
      {{/if}}
    </li>
  {{/if}}

  {{#if snapshot.children}}
  <ol class="snapshot-children">
    {{#each snapshot.children as |child|}}
      {{nested-snapshot snapshot=child}}
    {{/each}}
  </ol>
  {{/if}}

{{else}}

  {{#if author}}
    {{author-snapshot snapshot=snapshot}}
  {{/if}}

{{/if}}
