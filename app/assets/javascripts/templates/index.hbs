<div id="tahi-container">
  <h1 class="dashboard-header">Welcome, {{currentUser.fullName}}</h1>

  <main>
    <section id="dashboard-my-submissions">
      <h2>Your Submissions</h2>
      {{#if hasSubmissions}}
        <ul class="dashboard-submitted-papers">
          {{#each paper in model.submissions}}
            <li class="dashboard-paper-title">{{link-to paper.shortTitle "paper.edit" paper.id}}</li>
          {{/each}}
        </ul>
      {{else}}
        <p class="dashboard-info-text">Your scientific paper submissions will<br> appear here.</p>
      {{/if}}

      {{link-to "Create new submission" "paper_new" classNames="button-primary button--green button--wide"}}
    </section>

    {{#if hasAssignedTasks}}
      <section id="dashboard-my-tasks">
        <h2>Your Tasks</h2>
        {{#each paper in tasksByPaper}}
          <h3 class="dashboard-paper-title">{{link-to paper.shortTitle "paper.edit" paper.id}}</h3>
          {{each paper.tasks itemViewClass="ETahi.CardView"}}
        {{/each}}
      </section>
    {{/if}}
  </main>
</div>
