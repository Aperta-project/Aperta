<div class="admin-screen">
  <div class="admin-modal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">
          <h1>User Details</h1>
          <div class="row">
            <label class="modal-field-label">Username</label>
            <div class="modal-field">{{input class='modal-username' value=model.username}}</div>
          </div>

          <div class="row">
            <label class="modal-field-label">First Name</label>
            <div class="modal-field">{{input class='modal-first-name' value=model.firstName}}</div>
          </div>

          <div class="row">
            <label class="modal-field-label">Last Name</label>
            <div class="modal-field">{{input class='modal-last-name' value=model.lastName}}</div>
          </div>

          <div class="row">
            <div class="reset-password">
              <a href="#" class="reset-password-link secondary-button blue" {{action 'resetPassword' model}}>Reset your password</a>
              {{#if resetPasswordSuccess}}
                <div class="success">An email with reset password instructions has been sent to the user's email address.</div>
              {{/if}}

              {{#if resetPasswordFailure}}
                <div class="error">Server Error</div>
              {{/if}}
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <a class="cancel-link" {{action 'rollbackUser'}}>Cancel</a>
          <button type="button" {{action 'saveUser'}}>Save</button>
        </div>
      </div>
    </div>
  </div>
</div>
