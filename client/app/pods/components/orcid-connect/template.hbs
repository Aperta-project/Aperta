
    {{#if accessTokenExpired}}
      <!-- orcid account was linked, but access has expired -->
      <h1><img id="orcid-id-logo" src="http://orcid.org/sites/default/files/images/orcid_24x24.png" width='24' height='24' alt="ORCID logo"/> ORCID ID: </h1>
      <a href="{{orcidAccount.profile_url}}">{{orcidAccount.identifier}}</a>
      <i {{action "removeOrcidAccount" orcidAccount}} class="fa fa-trash"></i>
      <div>
        <a href="{{orcidAccount.oauthAuthorizeUrl}}"
           class="button-secondary button--green"
           target="_blank">
           Reauthorize Expired ORCID Access
        </a>
      </div>

    {{else if orcidAccount.identifier}}
      <!-- orcid account linked -->
      <img id="orcid-id-logo" src="http://orcid.org/sites/default/files/images/orcid_24x24.png" width='24' height='24' alt="ORCID logo"/>
      ORCID ID: <a href="{{orcidAccount.profile_url}}">{{orcidAccount.identifier}}</a>
      <i {{action "removeOrcidAccount" orcidAccount}} class="fa fa-trash"></i>
      <i {{action "randomOrcidId" orcidAccount}} class="fa fa-random" style="color: magenta;"></i>

    {{else}}
      <!-- no orcid account linked -->
      <button
         class="button-secondary button--green"
         disabled={{button_disabled}}
         {{action 'openOrcid'}}>
           <img id="orcid-id-logo" src="http://orcid.org/sites/default/files/images/orcid_24x24.png" width='24' height='24' alt="ORCID logo"/>
         {{button_text}}
      </button>
    {{/if}}
