<div id="tahi-container" class="manuscript-manager-template">
  <h2>Manuscript Manager Templates</h2>
  {{#each item in content}}
    <div class="template-thubmnail blue-box">
      <p>{{link-to item.name 'manuscript_manager_template.edit' item}}</p>

      <ul class="template-stats">
        <li class='stat-item'>{{item.phaseCount}} Phases</li>
        <li class='stat-item'>{{item.articleCount}} Active Articles</li>
      </ul>
    </div>
  {{/each}}
  <button class="primary-button blue-box" {{action "addTemplate" phase taskType}}>
    Add New Template
  </button>
</div>
