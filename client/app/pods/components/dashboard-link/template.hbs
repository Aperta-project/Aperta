<td class="col-xs-8 dashboard-paper-title {{type}}-paper-title hug-left">
  {{#link-to "paper.index" model.shortDoi
             id=paperLinkId}}
    {{{model.displayTitle}}}
  {{/link-to}}
  <br>
  <span class="dashboard-journal-name">
    {{model.journal.name}}
  </span>
  <span class="dashboard-manuscript-id">
    | ID: {{model.manuscript_id}}
  </span>
  {{#if unreadCommentsCount}}
    <span class="unread-comments">
      <span class="badge badge--red">
        {{unreadCommentsCount}}
      </span> new comments
    </span>
  {{/if}}
</td>
<td class="col-xs-3 hug-left">
  <span class="role-tag">{{roles}}</span><br>
  <span class="review-due-message">{{reviewDueMessage}}</span><br>
  <span class="originally-due-message">{{originallyDueMessage}}</span><br>
</td>
<td class="col-xs-2"><div class='status-tag hug-left'>{{status}}</div></td>
