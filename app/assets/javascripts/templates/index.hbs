<div id="tahi-container">
  <h1 class="dashboard-header truncated-field">Welcome, {{currentUser.fullName}}</h1>

  <main>
    <section id="dashboard-my-submissions">
      <h2>Your Submissions</h2>
      {{#if hasSubmissions}}
        <ul class="dashboard-submitted-papers">
          {{#each paper in model.submissions}}
            <li class="dashboard-paper-title truncated-field">{{link-to paper.shortTitle "paper.edit" paper.id}}</li>
          {{/each}}
        </ul>
      {{else}}
        <p class="dashboard-info-text">Your scientific paper submissions will<br> appear here.</p>
      {{/if}}

      {{link-to "Create new submission" "paper_new" classNames="button-primary button--green button--wide"}}
    </section>
  </main>
</div>
