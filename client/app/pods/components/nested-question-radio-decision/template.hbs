{{#if readonly}}
  {{#if shouldDisplayQuestionText}}
    <div class="{{textClassNames}}">{{{questionText}}}</div>
  {{/if}}

  {{#if model.answer.value}}
    <div class="answer-text">{{model.answer.value}}</div>
  {{else}}
    <div class="answer-text no-answer">{{noResponseText}}</div>
  {{/if}}

{{else}}
  {{#if shouldDisplayQuestionText}}
    <div class="{{textClassNames}}">{{{questionText}}}</div>
  {{/if}}

  {{#if helpText}}
    <ul class="question-help">{{{helpText}}}</ul>
  {{/if}}

  <div class="row {{wrapperClass}}">
    <label class="col-md-3">
      {{radio-button value="accept"
                     name=namePrefix
                     selection=model.answer.value
                     action=(action "setAnswer")}}
      Accept
    </label>

    <label class="col-md-3">
      {{radio-button value="reject"
                     name=namePrefix
                     selection=model.answer.value
                     action=(action "setAnswer")}}
      Reject
    </label>

    <label class="col-md-3">
      {{radio-button value="major_revision"
                     name=namePrefix
                     selection=model.answer.value
                     action=(action "setAnswer")}}
      Major Revision
    </label>

    <label class="col-md-3">
      {{radio-button value="minor_revision"
                     name=namePrefix
                     selection=model.answer.value
                     action=(action "setAnswer")}}
      Minor Revision
    </label>
  </div>
{{/if}}
