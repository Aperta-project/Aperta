{{#unless (eq uiState "edit")}}
  <div class="invitation-item-header" {{action "toggleDetails"}}>
    <div class="invitation-item-full-name">
      {{#if alternate}}
        <i class="fa fa-link alternate-link-icon"i aria-hidden="true"></i>
      {{/if}}
      {{#if invitee}}
        {{invitee.fullName}}
        &lt;{{invitation.email}}&gt;
      {{else}}
        {{invitation.email}}
      {{/if}}
    </div>
    <div class="invitation-item-status" {{action "toggleDetails"}}>
      {{#if (and (eq uiState 'closed') (not invitation.pending))}}
        <span>{{capitalize invitation.state}} {{format-date invitation.updatedAt format="MMM D, YYYY"}}</span>
      {{/if}}
    </div>
    <div class="invitation-item-body-preview">
      {{strip-html invitation.body}}
    </div>
    <div class="invitation-item-actions">
      {{#if displayEditButton}}
        <span class="invitation-item-action invitation-item-action-edit"
{{action "editInvitation" invitation bubbles=false}}>
          <span class="fa fa-pencil invite-edit"></span>
          <span class="invitation-item-action-text">Edit</span>
        </span>
      {{/if}}
      {{#if displayDestroyButton}}
        <span class="invitation-item-action invitation-item-action-delete"
{{action "destroyInvitation" invitation bubbles=false}}>
          <span class="fa fa-trash invite-remove" ></span>
          <span class="invitation-item-action-text">Delete</span>
        </span>
      {{/if}}
      {{#if displayRescindButton}}
        <span class="invitation-item-action invitation-item-action-delete" {{action "rescindInvitation" invitation}}>
          <span class="fa fa-ban invite-rescind"></span>
          <span class="invitation-item-action-text">Rescind</span>
        </span>
      {{/if}}
      {{#if displaySendButton}}
        <span class="invitation-item-action invitation-item-action-send {{sendButtonClass}}"
{{action "sendInvitation" invitation bubbles=false}}>
          <span class="fa fa-send invite-send"></span>
          <span class="invitation-item-action-text">Send</span>
        </span>
      {{/if}}
    </div>
  </div>
{{/unless}}

{{#if (eq uiState "edit")}}
  <div class="invitation-item-header">
    <div class="invitation-item-full-name">
     {{#unless (eq invitation composedInvitation)}}
      <b>
        Edit invitation to:
      </b>
     {{/unless}}
      {{#if invitee}}
        {{invitee.fullName}}
        &lt;{{invitation.email}}&gt;
      {{else}}
        {{invitation.email}}
      {{/if}}
    </div>
  </div>
{{/if}}

{{#if (eq uiState "show")}}
  <div class="invitation-item-details">
    <div class="invitation-item-state-and-date">
      {{capitalize (if (eq invitation.state "pending") "draft last updated" invitation.state)}}
      {{format-date invitation.updatedAt format="LLL"}}
    </div>
{{!-- Leave weird indentation --}}
<div class="invitation-show-body">{{{invitation.body}}}</div>
    <div class="invite-edit-buttons">
      {{#if allowAttachments}}
        {{invitation-attachment-manager invitation=invitation
                                        enableEditingAttachments=false
                                        showAddButton=false}}
      {{/if}}
    </div>
  </div>
{{/if}}

{{#if (eq uiState "edit")}}
  <div class="invitation-item-details">
    {{content-editable value=invitation.body
                       class="invitation-edit-body"
                       key-up=(action "saveDuringType" invitation)}}

    {{link-alternate
      invitation=invitation
      invitations=invitations
      primarySelected=(action "primarySelected")
    }}

    <div class="invite-edit-buttons">
      {{#if allowAttachments}}
        {{invitation-attachment-manager invitation=invitation}}
      {{/if}}
       <div class="spacer"></div>
       <button class="button-link button--green cancel" {{action "cancelEdit" invitation}}>cancel</button>
       <button class="button-secondary button--green invitation-save-button"
{{action "save" invitation}}>{{if (eq invitation composedInvitation) "Add to
Queue" "Save"}}</button>
    </div>
  </div>
{{/if}}

{{#if (and invitation.declined closedState)}}
  <div class="invitation-item-decline-info">
    <div class="invitation-decline-reason">
      <strong>Reasons: </strong>
      {{unbound (break-to-tag invitation.declineReason)}}
    </div>

    <div class="invitation-reviewer-suggestions">
      <strong>Reviewer Suggestions: </strong>
      {{unbound (break-to-tag invitation.reviewerSuggestions)}}
    </div>
  </div>
{{/if}}
