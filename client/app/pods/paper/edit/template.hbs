{{partial "paper/control-bar"}}

<div class="editor-toolbar">
  {{partial "paper/edit/toolbar"}}
</div>

<div id="paper-container" {{bind-attr class="isSidebarEmpty:sidebar-empty"}}>

  {{partial "paper/sidebar"}}

  <div class="manuscript-container">


    <main>

      {{flash-messages classNames="flash-messages-paper-editor"}}

      <article {{ bind-attr class=":manuscript isEditing:editing:read-only"}}>
        <div class="manuscript-title-and-placeholder">
          {{content-editable tagName="h2"
                             id="paper-title"
                             placeholder="Type your manuscript title here"
                             value=title
                             preventEnterKey="true"}}

          {{#if showPlaceholder}}
            <div id="paper-placeholder" {{action "tryHidingPlaceholder"}}>Type your manuscript here</div>
          {{/if}}
        </div>
        <div id="paper-body">
          {{visual-editor
            viewName="editor"
            initializerContext=controller
            initializer=controller.setupEditor}}
        </div>
      </article>
    </main>

  </div>

</div>
