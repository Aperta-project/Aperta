{{partial "task-completed-section"}}

<div class="task-main-content">
  <div class="production-metadata">
    <div class="form-group">
      <div class="inset-form-control publication-date {{if validationErrors.publicationDate "error"}}">
        <div class="inset-form-control-text">
          {{error-message message=validationErrors.publicationDate class="inset-form-control-text"}}
          <label>
            {{nested-question-display ident="production_metadata--publication_date" owner=task}}
          </label>
        </div>
        {{nested-question-date-picker
          ident="production_metadata--publication_date"
          owner=task
          group=group
          role="startPicker"
          displayQuestionText=false
          placeholder="Select Date..."}}
      </div>
    </div>
    <div class="form-group">
      <div class="inset-form-control required volume-number {{if validationErrors.volumeNumber "error"}}">
        <div class="inset-form-control-text">
          <label>
            {{nested-question-display ident="production_metadata--volume_number" owner=task}}
          </label>
          {{error-message message=validationErrors.volumeNumber class="inset-form-control-text"}}
        </div>
        {{nested-question-input
          ident="production_metadata--volume_number"
          owner=task
          type="number"
          displayQuestionText=false
          placeholder="e.g. 3"}}
      </div>

      <div class="inset-form-control required issue-number {{if validationErrors.issueNumber "error"}}">
        <div  class="inset-form-control-text">
          <label>
            {{nested-question-display ident="production_metadata--issue_number" owner=task}}
          </label>
          {{error-message message=validationErrors.issueNumber class="inset-form-control-text"}}
        </div>
        {{nested-question-input
          ident="production_metadata--issue_number"
          owner=task
          type="number"
          displayQuestionText=false
          placeholder="e.g. 33"}}
      </div>
    </div>

    <div class="provenance">
      <label>
        {{nested-question-display ident="production_metadata--provenance" owner=task}}
      </label>
      {{nested-question-textarea ident="production_metadata--provenance"
        owner=task
        displayQuestionText=false
        displayContent=true}}
    </div>

    <div class="production-notes">
      <label>
        {{nested-question-display ident="production_metadata--production_notes" owner=task}}
      </label>
      {{nested-question-textarea ident="production_metadata--production_notes"
        owner=task
        displayQuestionText=false
        displayContent=true
        placeholder="Add production notes here."}}
    </div>

    <div class="special-handling-instructions">
      <label>
        {{nested-question-display ident="production_metadata--special_handling_instructions" owner=task}}
      </label>
      {{nested-question-textarea ident="production_metadata--special_handling_instructions"
        owner=task
        displayQuestionText=false
        displayContent=true
        placeholder="Add special handling instructions here."}}
    </div>
  </div>
</div>
