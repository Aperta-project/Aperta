<h3 class="invite-to">
  Invitation to
  {{#if user.full_name}}
    {{user.full_name}}
  {{/if}}
  [{{user.email}}]
</h3>

{{content-editable value=invitation.body
                   class="form-control taller-textarea"}}


<div class="flex-container">
  {{#if allowAttachments}}
    {{invitation-attachment-manager invitation=invitation}}
  {{/if}}

  <div class="invite-editor-cta">
    <button class="button-link button--green cancel" {{action attrs.closeAction}}>close</button>
    <button class="button-primary button--green invite-editor-button" {{action "sendInvitation" invitation}}>Send Invitation</button>
  </div>
</div>
