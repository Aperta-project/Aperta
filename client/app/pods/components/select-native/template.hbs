{{#if prompt}}
  {{#if allowDeselect}}
    <option selected={{if selection "false" "true"}}>
      {{prompt}}
    </option>
  {{else}}
    <option disabled selected={{if selection "false" "true"}}>
      {{prompt}}
    </option>
  {{/if}}
{{/if}}

{{#if optionValuePath}}
  {{#each content key="@index" as |item|}}
    <option value="{{read-path item optionValuePath}}"
            selected={{is-equal item selection}}>
      {{read-path item optionLabelPath}}
     </option>
  {{/each}}
{{else}}
  {{#each content key="@index" as |item|}}
    <option value={{item}} selected={{is-equal item selection}}>{{item}}</option>
  {{/each}}
{{/if}}
