{{#if shouldDisplayQuestionText}}
  <div class="question-text {{textClassNames}} {{concat ident "-question-text"}}">{{{questionText}}}</div>
{{/if}}

{{#if showUnwrappedHelpText}}
  {{#if unwrappedHelpText}}
    {{{unwrappedHelpText}}}
  {{/if}}
{{/if}}

{{#if helpText}}
  <ul class="question-help {{concat ident "-help-text"}}">{{{helpText}}}</ul>
{{/if}}

{{#if readOnly}}
  {{#if answer.wasAnswered}}
    {{#if answer.value}}
      <div class="answer-text">{{yesLabel}}</div>
    {{else}}
      <div class="answer-text">{{noLabel}}</div>
    {{/if}}
  {{else}}
    <div class="answer-text no-answer">{{noResponseText}}</div>
  {{/if}}

  {{#if hasBlock}}
    <div class="additional-data">
      {{yield yieldingForAdditionalData}}
    </div>
  {{/if}}

{{else}}

  <div class={{wrapperClass}}>
    {{binary-radio-button name=namePrefix
                          selection=answer.value
                          yesValue=yesValue
                          noValue=noValue
                          yesLabel=yesLabel
                          noLabel=noLabel
                          yesClass=(concat ident "-yes")
                          noClass=(concat ident "-no")
                          yesAction="yesAction"
                          noAction="noAction"
                          disabled=disabled}}

    {{#if hasBlock}}
      <div class="additional-data">
        {{yield yieldingForAdditionalData}}
      </div>
    {{/if}}
  </div>
{{/if}}
