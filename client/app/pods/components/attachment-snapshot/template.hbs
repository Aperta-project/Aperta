{{#if (or attachment1.isImage attachment2.isImage)}}
  <div>
    <label>Image:</label>
    <span class="attachment-snapshot-image">
      {{#if fileHashChanged}}
        {{#if attachment2.isImage}}
          <img class="removed" src="{{attachment2.previewUrl}}" />
        {{/if}}
        {{#if attachment1.isImage}}
          <img class="added" src="{{attachment1.previewUrl}}" />
        {{/if}}
      {{else}}
        <img src="{{attachment1.previewUrl}}" />
      {{/if}}
    </span>
  </div>
{{/if}}

{{#if (or attachment1.file attachment2.file)}}
  <div>
    <label>File:</label>
    <span class="attachment-snapshot-file">
      {{#if fileHashChanged}}
        <a class="removed" href="{{attachment2.url}}">{{attachment2.file}}</a>
        <a class="added" href="{{attachment1.url}}">{{attachment1.file}}</a>
      {{else}}
        <a href="{{attachment1.url}}">{{attachment1.file}}</a>
      {{/if}}
    </span>
  </div>
{{/if}}

{{#if (or attachment1.title attachment2.title)}}
  <div class="attachment-snapshot-title">
    <label>Title:</label>
    {{text-diff viewingText=attachment1.title comparisonText=attachment2.title}}
  </div>
{{/if}}

{{#if (or attachment1.caption attachment2.caption)}}
  <div class="attachment-snapshot-caption">
    <label>Caption:</label>
    {{text-diff viewingText=attachment1.caption comparisonText=attachment2.caption}}
  </div>
{{/if}}

{{#if (or attachment1.category attachment2.category)}}
  <div class="attachment-snapshot-category">
    <label>Category:</label>
    {{text-diff viewingText=attachment1.category comparisonText=attachment2.category}}
  </div>
{{/if}}

{{#if (or attachment1.label attachment2.label)}}
  <div class="attachment-snapshot-label">
    <label>Label:</label>
    {{text-diff viewingText=attachment1.label comparisonText=attachment2.label}}
  </div>
{{/if}}

{{#if (or attachment1.publishable attachment2.publishable)}}
  <div class="attachment-snapshot-publishable">
    <label class="publishable">Publishable:</label>
    {{boolean-diff viewingBool=attachment1.publishable comparisonBool=attachment2.publishable}}
  </div>
{{/if}}
