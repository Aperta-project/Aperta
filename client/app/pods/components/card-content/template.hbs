{{!--
  This card-content component will be rendered
  for every node in the tree, wrapping a more specific
  inner component that depends on the type of the content--}}
  {{#if (and answer keepAnswerContainer)}}
    <div class="answer-container">
      <div class="answer">
        {{{content.text}}}

        {{#if content.isRequired}}
          <span class="required-field">*</span>
        {{/if}}

        {{#if hasLabel}}
          <label for={{name}}>
            {{{content.label}}}
            {{partial "card-content-component"}}
          </label>
        {{else}}
          {{partial "card-content-component"}}
        {{/if}}
      </div>
      <div class="additional-text">
        {{#if content.hasAdditionalText}}
          {{card-content/tabbed-textarea
            annotationChanged=(action 'updateAnnotation')
            showAnnotation=content.allowAnnotations
            annotation=answer.annotation
            instructionText=content.instructionText
            disabled=disabled
          }}
        {{/if}}
      </div>
    </div>
  {{else}}
    {{{content.text}}}

    {{#if content.isRequired}}
      <span class="required-field">*</span>
    {{/if}}

    {{#if hasLabel}}
      <label for={{name}}>
        {{{content.label}}}
        {{partial "card-content-component"}}
      </label>
    {{else}}
      {{partial "card-content-component"}}
    {{/if}}
  {{/if}}
