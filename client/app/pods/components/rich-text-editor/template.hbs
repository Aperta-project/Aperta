{{#if disabled}}
  {{{value}}}
{{else}}
  <div class="rich-text-editor-container {{ if hasErrors "error" }}">
    {{#unless hideError}}
      {{card-content/validation-errors errors=errorMessages hideErrors=false}}
    {{/unless}}
    {{tinymce-editor
      class=class
      name=name
      errorMessages=errorMessages
      onNewValue=(action onContentsChanged)
      onValueChanged=newValueCheck
      options=editorOptions
      value=editorValue
      afterEditorInit=(action postRender)
    }}
  </div>
{{/if}}
