<h2>{{group.name}}</h2>

{{#if isEditable}}
  <a class="button-secondary button--green" {{action "toggleAuthorForm" group}}>Add a New Author</a>
  <br><br>

  {{#if showNewAuthorForm}}
    {{add-author-form
      institutions=institutions
      hideAuthorForm="toggleAuthorForm"
      saveAuthor="saveNewAuthor"}}
  {{/if}}
{{/if}}

{{view ETahi.AuthorGroupDropTargetView group=group index=0}}
{{#each author in sortedAuthors}}
  {{author-view
    isEditable=isEditable
    institutions=institutions
    delete="removeAuthor"
    save="saveAuthor"
    author=author}}
  {{view ETahi.AuthorGroupDropTargetView group=group index=author.position}}
{{/each}}
