<div class="overlay">
  <div>
    <header>
      <h2><a href='paperpath'>{{paper.displayTitle}}</a></h2>
      <a class="primary-button" {{action 'closeAction'}}>Close</a>
    </header>
    <main>
      {{yield}}
    </main>
    <footer>
      <div class="content">
        <div class="assignee-drop-down">
          <label for="assignee">This card is owned by</label>
          {{chosen content=assignees name='assignee'
                    prompt="Please select an assignee"
                    value=assignee
                    changeAction='saveModel'
                    optionValuePath="content"
                    optionLabelPath="content.fullName"}}
        </div>
        <div class="completed-checkbox">
          {{input id="task_completed" type='checkbox' name="task_completed" checked=completed}}
          <label for="task_completed">Completed</label>
        </div>
      </div>
      <a class="primary-button" {{action 'closeAction'}}>Close</a>
    </footer>
  </div>
</div>
