<div id="tahi-container" class="admin-screen">

  <h1>Journal Administration</h1>

  <div class="admin-users-row">
    <h2>Users</h2>
    <div class='col-md-4'>
      <div class="row admin-user-search">
        {{input action="searchUsers" placeholder="SEARCH ALL USERS" class="admin-user-search-input" name='Admin Search Input' value=searchQuery}}
        <button class="admin-user-search-button" {{action "searchUsers"}}><span class="glyphicon glyphicon-search"></span></button>
      </div>
    </div>

    {{#if adminJournalUsers}}
      <table class='col-md-12 admin-users'>
        <tr>
          <th>Username</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Roles</th>
        </tr>
        {{#each user in adminJournalUsers}}
          {{render "adminJournalUser" user}}
        {{/each}}
      </table>
    {{/if}}
  </div>

  {{render "roles/index" roles}}

  {{render "journal_task_types/index" journalTaskTypes}}

  {{render "manuscript_manager_template/index" manuscriptManagerTemplates}}

  <div class="admin-section">
    <h2 class="admin-section-title">Style Settings</h2>

    <div class="admin-style-setting-section">
      {{partial "journal/upload-epub-cover"}}
    </div>

    <div class="admin-style-setting-section">
      <button class="button-primary button--blue-light" {{action "editEPubCSS"}}>Edit ePub CSS</button>
      {{view ETahi.TimedMessageView class="epub-css save-status" message=epubCssSaveStatus}}
    </div>

    <div class="admin-style-setting-section">
      <button class="button-primary button--blue-light" {{action "editPDFCSS"}}>Edit PDF CSS</button>
      {{view ETahi.TimedMessageView class="pdf-css save-status" message=pdfCssSaveStatus}}
    </div>

    <div class="admin-style-setting-section">
      <button class="button-primary button--blue-light" {{action "editManuscriptCSS"}}>Edit Manuscript CSS</button>
      {{view ETahi.TimedMessageView class="manuscript-css save-status" message=manuscriptCssSaveStatus}}
    </div>
  </div>
</div>
