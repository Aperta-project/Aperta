{{#if view.isTextItem}}
  {{inline-edit-text
    bodyPart=view.item
    isNew=view.isNew
    delete="deleteItem"
    saveModel="saveModel"}}
{{/if}}
{{#if view.isCheckboxItem}}
  {{inline-edit-checkbox
    bodyPart=view.item
    isNew=view.isNew
    delete="deleteItem"
    saveModel="saveModel"}}
{{/if}}
{{#if view.isEmailItem}}
  {{inline-edit-email
    bodyPart=view.item
    allUsers=view.allUsers
    overlayParticipants=view.overlayParticipants
    isNew=view.isNew
    isSendable = view.isSendable
    delete="deleteItem"
    saveModel="saveModel"
    sendEmail="sendEmail"}}
{{/if}}
