<div id="manuscript-manager">
  {{title}}
  <div class="full-height">
    <ul class="columns">
      {{add-column position=-1 action="addPhase" bonusClass='first-add-column'}}
      {{#each phase in sortedPhases}}
        <li class="column">
          {{add-column position=phase.position action="addPhase"}}
          <div class="column-title">
            <h2>{{phase.name}}</h2>
          </div>
          <div class="column-content">
            <ul class='cards'>
              {{#each task in phase.tasks}}
                <li class='card-item'>
                  <div class='card-container'>
                    <a {{bind-attr class=':card task.completed:completed task.isMessage:message'}} {{action 'showTaskOverlay' task}}>
                      <span class='glyphicon glyphicon-ok completed-glyph'></span>
                      <span>{{task.title}}</span>
                    </a>
                  </div>
                </li>
              {{/each}}
            </ul>
          </div>
        </li>
      {{/each}}
    </ul>
  </div>
</div>
