{{#if isEditing}}

  {{reviewer-form reviewerRecommendation=reviewerRecommendation
                  validationErrors=validationErrors
                  saveRecommendation=(action "saveRecommendation")
                  cancelRecommendation=(action "cancelRecommendation")
                  isNotEditable=isNotEditable}}

{{else}}

  <div class="authors-overlay-item--text reviewer">
    <div class="author-name full-name">{{reviewerRecommendation.fullName}}</div>
    <span class="email">{{reviewerRecommendation.email}}</span><br>
    <span class="title">{{reviewerRecommendation.title}}</span> &nbsp; &nbsp; <span class="department">{{reviewerRecommendation.department}}</span>
    <br>
    <span class="affiliation">{{reviewerRecommendation.affiliation}}</span>
    <div class="decision">
      {{nested-question-display ident="reviewer_recommendations--recommend_or_oppose" owner=reviewerRecommendation}}:
      {{nested-question-answer
        ident="reviewer_recommendations--recommend_or_oppose"
        owner=reviewerRecommendation
        yesLabel="Recommend"
        noLabel="Oppose"
      }}
    </div>
    <span class="reason">{{nested-question-answer ident="reviewer_recommendations--reason" owner=reviewerRecommendation}}</span>
  </div>

  {{#if showHover}}
    <div class="authors-overlay-item--actions">
      <div class="actions">
        <div class="action" {{action "edit"}}>
          <span class="fa fa-pencil scaleIn"></span>
        </div>
        <div class="action" {{action "delete"}}>
          <span class="fa fa-trash scaleIn"></span>
        </div>
      </div>
    </div>
  {{/if}}

{{/if}}

{{#if isDeleting}}
  <div class="authors-overlay-item--delete">
    <p>This will permanently delete the suggested reviewer. Are you sure?</p>
    <button class="button-secondary button--green knockout" {{action "cancelDeletion"}}>Cancel</button>
    <button class="button-secondary button--green knockout" {{action "confirmDeletion"}}>Delete Forever</button>
  </div>
{{/if}}
