{{input value=resultText bubbles=true placeholder=placeholder class="auto-suggest-no-border"}}

{{#if searching}}
  {{progress-spinner visible=true size="small"}}
{{/if}}

{{#if searchResults}}
  {{#auto-suggest-list selectItem="selectItem"
                       selectUnknownItem="selectUnknownItem"
                       highlightedItem=highlightedItem
                       items=searchResults as |item|}}
    {{yield item}}
  {{/auto-suggest-list}}
{{/if}}
