<div class="sheet-toolbar">
  <span class="sheet-toolbar-button" {{action "cancel" model}}>
    <i class="fa fa-chevron-left"></i> cancel
  </span>
</div>

<div class="sheet-content discussions-show-content">
  <div class="discussions-show-header">
    <h1 class="discussions-show-title">Create New Topic</h1>
  </div>

  <div class="inset-form-control">
    <label class="inset-form-control-text">Topic Title</label>
    {{input type="text" value=model.title class="inset-form-control-input" placeholder="Tech Check Discussion"}}
  </div>

  <div class="inset-form-control">
    <label class="inset-form-control-text">Message</label>
    {{textarea class="inset-form-control-textarea" placeholder="First comment!"}}
  </div>

  <button class="button-primary button--green" {{action "save" model}}>Create Topic</button>
</div>
