{{#if groupByDecision}}
  <div class="active-invitations">
    {{#each latestDecisionInvitations as |invitation|}}
      {{invitation-detail-row
          setRowState=(action attrs.toggleActiveInvitation invitation)
          invitation=invitation
          activeInvitation=activeInvitation
          activeInvitationState=activeInvitationState}}
    {{/each}}
  </div>

  {{#each previousDecisionsWithFilteredInvitations as |decision|}}
    <div class='revision-human-number'>
      Round {{decision.majorVersion}}
    </div>

    <div class="expired-invitations">
      {{#each decision.filteredInvitations as |invitation|}}
        {{invitation-detail-row
            setRowState=(action attrs.toggleActiveInvitation invitation)
            invitation=invitation
            activeInvitation=activeInvitation
            activeInvitationState=activeInvitationState
            allowDestroy=false
            allowSend=false}}
      {{/each}}
    </div>
  {{/each}}

{{else}}
  <div class="active-invitations">
    {{#each persistedInvitations as |invitation|}}
      {{invitation-detail-row
          setRowState=(action attrs.toggleActiveInvitation invitation)
          invitation=invitation
          activeInvitation=activeInvitation
          activeInvitationState=activeInvitationState}}
    {{/each}}
  </div>
{{/if}}
