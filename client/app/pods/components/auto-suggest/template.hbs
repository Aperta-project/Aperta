{{input
    id=inputId
    value=(readonly resultText)
    bubbles=true
    key-up=(action "keyUp")
    change=(action "valueChanged")
    placeholder=placeholder
    name=inputName
    class="auto-suggest-no-border"}}

{{error-message message=errorMessage
                displayIcon=true
                displayText=false}}

{{#if searching}}
  {{progress-spinner visible=true size="small"}}
{{/if}}

{{#if searchResults}}
  {{#auto-suggest-list class="animation-fade-in"
                       positionNearSelector=positionNearSelector
                       selectItem="selectItem"
                       selectUnknownItem="selectUnknownItem"
                       highlightedItem=highlightedItem
                       setMaxHeight=true
                       items=searchResults as |item|}}
    {{yield item}}
  {{/auto-suggest-list}}
{{/if}}
