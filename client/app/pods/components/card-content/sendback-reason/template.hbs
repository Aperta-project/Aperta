{{!-- render the first child (checkbox) --}}
  {{card-content
    content=checkbox
    disabled=disabled
    owner=owner
    preview=preview}}
{{!-- render the second child (pencil-style checkbox) --}}
  {{#if checkboxAnswer.value}}
    {{card-content
      content=pencil
      disabled=disabled
      owner=owner
      faIconizeTo="pencil"
      preview=preview}}
  {{/if}}

{{#if showText}}
  {{card-content
    content=textarea
    disabled=disabled
    owner=owner
    preview=preview}}
{{/if}}
