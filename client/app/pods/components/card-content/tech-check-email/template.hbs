<div class="task-main-content">

  {{card-content/display-children
    content=content
    owner=owner
    disabled=disabled
    hasAnswerContainer=false
    repetition=repetition
    preview=preview
  }}

  <button
    class="button-primary button--green"
    disabled={{emailNotAllowed}}
    {{action "generatePreview"}}>
      Show Email Preview
  </button>

  {{#if previewError}}
    <div class="preview-error error-message">
      <i class="fa fa-exclamation-triangle"></i>
      <p>All selected sendback reason fields must have a value.</p>
    </div>
  {{/if}}

  {{#if showEmailPreview}}
    <div class="email-preview">
      <h2>Previewing sendback to author email</h2>

      <div class="preview-content">
        {{{emailPreview}}}
      </div>

      <button
        class="button-primary button--green"
        disabled={{emailNotAllowed}}
        {{action "sendChangeRequestEmail"}}>
          Send Changes For Author
      </button>
    </div>
  {{/if}}
</div>
