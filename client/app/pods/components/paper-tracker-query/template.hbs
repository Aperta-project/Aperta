{{#if editState}}
  {{input value=query.title enter="saveTitle"}}
{{else}}
  {{#link-to (query-params query=query.query orderBy=query.orderBy orderDir=query.orderDir)}} {{ query.title }} {{/link-to}}
  <i class="fa fa-pencil" {{action "startEditTitle"}}></i>
  <i class="fa fa-trash" {{action "delete"}}></i>
{{/if}}
