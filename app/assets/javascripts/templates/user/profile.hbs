{{view "control-bar"}}
{{flash-messages messages=flash.messages classNames="flash-messages--below-control-bar"}}

<div id="tahi-container">

  <div class="col-md-2">
    {{view "profile-avatar"}}
  </div>

  <div class="col-md-10">
    <div class="profile-section">
      <h1>First and last name:</h1>
      <h2 id="profile-name">{{model.fullName}}</h2>
    </div>

    <div id="profile-username" class="profile-section">
      <h1>Username:</h1>
      <h2>{{model.username}}</h2>
    </div>

    <div id="profile-email" class="profile-section">
      <h1>Email:</h1>
      <h2>{{model.email}}</h2>
    </div>

    {{partial "user/affiliations"}}

    <br><br>
    <a href="#" id="reset-password">Reset my password</a>
  </div>

</div>
