{{view "control-bar"}}

<div id="tahi-container">
  <section id="dashboard-my-submissions">
    <h2 class="welcome-message">
      Hi, {{currentUser.firstName}}.
      {{#if papers.length}}
        You have {{totalPaperCount}} {{pluralize totalPaperCount "manuscript" "manuscripts"}}.
      {{else}}
        You have no manuscripts.
      {{/if}}
    </h2>
    <button class="button-primary button--green button--wide" {{action "showNewPaperOverlay"}}>Create New Submission</button>
    {{#if hasPapers}}
      <ul class="dashboard-submitted-papers">
        {{#each paper in sortedPapers}}
          {{view "dashboardLink" content=paper unreadComments=unreadComments}}
        {{/each}}
      </ul>
      {{#if paginate}}
        <a {{action "loadMorePapers"}} href="#" class="button-secondary button--green button--wide load-more-papers">
          Load More
        </a>
      {{/if }}
    {{else}}
      <p class="dashboard-info-text">Your scientific paper submissions will<br> appear here.</p>
    {{/if}}
  </section>
</div>
