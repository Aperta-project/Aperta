<div class="overlay-container full">
  <header class="overlay-title-text animation-fade-in">
    <h1 class="feedback-overlay-thanks">Recent Activity</h1>
  </header>
  {{#if isLoading}}
    {{progress-loader visible=true
                      large=true}}
  {{/if}}
  <table>
    {{#each model as |feed|}}
      <tr>
        <td class="activity-feed-overlay-message">{{unbound feed.message}}</td>
        <td class="activity-feed-overlay-user">
          <img src={{unbound feed.userAvatarUrl}} class="user-thumbnail">
          {{unbound feed.userFullName}}
        </td>
        <td class="activity-feed-overlay-timestamp" id="timestamp">{{unbound feed.createdAt}}</td>
      </tr>
    {{/each}}
  </table>
</div>
