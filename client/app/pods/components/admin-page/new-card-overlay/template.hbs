<h1>Add new card to {{journal.name}}</h1>

<div class="labeled-input-form">
  <div class="admin-new-card-overlay-form">
    {{forms/labeled-input-with-errors type="text" label="Name your new card:" name="name" value=cardName enter=(action "complete") errors=errors required=true autofocus=true}}
    <p class="admin-new-card-overlay-note">Note: this name will not appear to external audiences. It can be edited at any time.</p>

    <div class='input-header'>
      <div class='description'>
        <label class="required" for="cardType">Select your card type:</label>
      </div>
    </div>

    <div class='input-with-notification-icon'>
      {{#power-select
          options=cardTypes
          selected=cardType
          onchange=(action "valueChanged")
          searchEnabled=false
          disabled=false
          ariaLabelledBy="cardType"
          as |val|}}
        {{val.label}}
      {{/power-select}}
    </div>
  </div>


  <div class="overlay-action-buttons">
    <button class="button-link button--blue admin-new-card-overlay-cancel" {{action "close"}}>
      cancel
    </button>

    <button class="button-primary button--blue admin-new-card-overlay-save" disabled={{if saving true null}} {{action "complete"}}>
      {{progress-spinner visible=saving color="blue" center=true}}
      {{#unless saving}}Create new card{{/unless}}
    </button>
  </div>
</div>
