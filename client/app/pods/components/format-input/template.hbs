{{#if disabled}}
  {{{value}}}
{{else}}
  {{#if displaySubscript}}
    <a title="Subscript"
       href="#"
       class="format-input-button {{if _subscriptActive "format-input-button--active"}}"
       tabindex="-1"
       {{action "format" "subscript" bubbles="false"}}>
      {{fa-icon icon="subscript"}}
    </a>
  {{/if}}

  {{#if displaySuperscript}}
    <a title="Superscript"
       href="#"
       class="format-input-button {{if _superscriptActive "format-input-button--active"}}"
       tabindex="-1"
       {{action "format" "superscript" bubbles="false"}}>
      {{fa-icon icon="superscript"}}
    </a>
  {{/if}}

  {{#if displayItalic}}
    <a title="Italic"
       href="#"
       class="format-input-button {{if _italicActive "format-input-button--active"}}"
       tabindex="-1"
       {{action "format" "italic" bubbles="false"}}>
      {{fa-icon icon="italic"}}
    </a>
  {{/if}}

  {{#if displayBold}}
    <a title="Bold"
       href="#"
       class="format-input-button {{if _boldActive "format-input-button--active"}}"
       tabindex="-1"
       {{action "format" "bold" bubbles="false"}}>
      {{fa-icon icon="bold"}}
    </a>
  {{/if}}

  {{content-editable value=value
                     class="format-input-field"
                     placeholder=attrs.placeholder
                     autofocus=autofocus
                     focus-in=(action "focus-in")
                     focus-out=(action "focus-out")
                     selection-in=(action "selection-in")
                     selection-out=(action "selection-out")}}
{{/if}}