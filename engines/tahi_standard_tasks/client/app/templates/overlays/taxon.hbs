<h1>New Taxon</h1>

<div class="question-list">
  <div class="question">
    {{nested-question-check model=taxonQuestionForZoological
        task=model
        disabled=isSubmissionTaskNotEditable}}

    {{#if taxonQuestionForZoological.answer.value}}
      <div class="question-text">
        <p>Please read <a href="http://www.plosbiology.org/static/policies#taxon" target="_blank">Regarding Submission of a new Taxon Name</a> and indicate if you comply:</p>
      </div>
      {{#nested-question-check
        model=compliesQuestionForZoological
        task=model
        disabled=isSubmissionTaskNotEditable}}
      {{/nested-question-check}}
    {{/if}}
  </div>

  <br>

  <div class="question">
    {{nested-question-check
      model=taxonQuestionForBotanical
      task=model
      disabled=isSubmissionTaskNotEditable}}

    {{#if taxonQuestionForBotanical.answer.value}}
      <div class="question-text">
        <p>Please read <a href="http://www.plosbiology.org/static/policies#taxon" target="_blank">Regarding Submission of a new Taxon Name</a> and indicate if you comply:</p>
      </div>

      {{#nested-question-check
        model=compliesQuestionForBotanical
        task=model
        disabled=isSubmissionTaskNotEditable}}
      {{/nested-question-check}}
    {{/if}}
  </div>
</div>
