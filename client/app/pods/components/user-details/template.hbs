<div class={{if validationErrors.username "error"}}>
  <label class="modal-field-label" for="user-detail-username">Username</label>
  <div class="modal-field">
    {{input class="modal-username" id="user-detail-username" value=model.username}}
    {{error-message message=validationErrors.username}}
  </div>
</div>

<div>
  <label class="modal-field-label" for="user-detail-first-name">First Name</label>
  <div class="modal-field">{{input class="modal-first-name" id="user-detail-first-name" value=model.firstName}}</div>
</div>

<div>
  <label class="modal-field-label" for="user-detail-last-name">Last Name</label>
  <div class="modal-field">{{input class="modal-last-name" id="user-detail-last-name" value=model.lastName}}</div>
</div>

<br class="clear"><br>

<div class="reset-password">
  <a href="#" class="reset-password-link button-secondary button--blue" {{action "resetPassword" model}}>Reset password</a>
  {{#if resetPasswordSuccess}}
    <div class="success">An email with reset password instructions has been sent to the user's email address.</div>
  {{/if}}

  {{#if resetPasswordFailure}}
    <div class="error">Server Error</div>
  {{/if}}
</div>

<div class="overlay-action-buttons">
  <a class="button-link button--blue cancel-link" {{action "rollbackUser"}}>Cancel</a>
  <button class="button-primary button--blue" {{action "saveUser"}}>Save</button>
</div>
