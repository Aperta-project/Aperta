<p style="font-size:18px;">Reminders</p>
{{#each events as |event|}}
  <div class="scheduled-event event-{{event.state}}">
    <p>
      {{event.name}} on
      {{moment-format event.dispatchAt dispatchDateFormat}} {{dueAtTimezone}}
      {{due-date-offset event.dispatchAt dueDate}}
    </p>
    <p>
      {{#if event.completed}}{{fa-icon 'fa-check'}}&nbsp;Sent{{/if}}
      {{#if (or event.inactive event.canceled)}}{{fa-icon 'fa-minus'}}&nbsp;NA{{/if}}
      {{#if event.errored}}{{fa-icon 'fa-exclamation-triangle'}}&nbsp;Reminder not sent due to a system error{{/if}}
    </p>
  </div>
{{/each}}
<br>
