<div class="inline-edit bodypart-display {{if editing "editing"}} {{bodyPartType}}">
  <label>
    {{check-box checked=checked action=(action attrs.save) disabled=(if canEdit false true)}}
    {{{bodyPart.value}}}
  </label>
</div>

<div class="inline-edit-form {{if editing "editing"}}">
  <div class="two-element-form">
    {{content-editable value=bodyPart.value class="editable inline-edit-display"}}
    <span class="item-remove" {{action attrs.delete}}></span>
  </div>
</div>
