<div class="journal-thumbnail-edit-form clearfix">
  <div class="journal-logo-upload">
    <div class="journal-thumbnail">
      {{#if logoPreview}}
        <span class="journal-logo-preview"></span>
      {{else}}
        {{#if journal.logoUrl}}
          <img {{bind-attr src=journal.logoUrl}}>
        {{else}}
          {{partial "svg/default-journal-logo"}}
        {{/if}}
      {{/if}}
    </div>
    {{partial "journal/logo-upload"}}
    <span class="journal-logo-upload-note">(250px x 40px)</span>
    <div class="journal-logo-spinner"></div>
  </div>

  <div {{bind-attr class=":form-group :required nameErrors:error"}}>
    <div {{bind-attr class=":error-message nameErrors::hidden"}}>{{nameErrors}}</div>
    {{input type="text"
            value=journal.name
            class="form-control journal-name-edit"
            placeholder="Journal Title"}}
  </div>
  <div {{bind-attr class=":form-group :required descriptionErrors:error"}}>
    <div {{bind-attr class=":error descriptionErrors::hidden"}}>{{descriptionErrors}}</div>
    {{textarea value=journal.description
               class="form-group required journal-description-edit form-control"
               placeholder="Journal Description"}}
  </div>
  <div class="journal-edit-buttons">
    <a href="#" class="button-link button--white" {{action "resetJournalDetails"}}>Cancel</a>
    <a href="#" class="button-secondary button--white" {{action "saveJournalDetails"}}>Save</a>
  </div>
</div>
