{{#if displayContent}}
  {{#if errorPresent}}
    <i class="fa fa-exclamation-triangle" title={{errors}}></i>
  {{/if}}

  {{#if readOnly}}
    {{#if shouldDisplayQuestionText}}
      <span class="{{textClassNames}}">
        {{{questionText}}}
      </span>
    {{/if}}

    {{#if answer.value}}
      <div class="answer-text">{{answer.value}}</div>
    {{else}}
      <div class="answer-text no-answer">{{noResponseText}}</div>
    {{/if}}

  {{else}}
    {{#if shouldDisplayQuestionText}}
      <div class="{{textClassNames}}">
        {{{questionText}}}
      </div>
    {{/if}}

    <div>
      {{#if label}}
        <span class="text-field-title">{{label}}</span>
      {{/if}}

      {{input name=ident
              value=answer.value
              class=inputClassNames
              placeholder=placeholderText
              type=type
              disabled=disabled}}
    </div>

  {{/if}}
{{/if}}
