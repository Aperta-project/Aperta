{{#if hasReport}}
  <ol class="question-list">

    <li class="question">
      {{nested-question-radio-decision
        ident="reviewer_report--decision_term"
        owner=model
        readOnly=readOnly
      }}
    </li>

    <li class="question">
      {{nested-question-radio
        ident="reviewer_report--competing_interests"
        owner=model
        displayContent=true
        readOnly=readOnly
        helpText=(concat
                  "Please review our <a href='" competingInterestsLink "'>
                  Competing Interests policy</a> and declare any potential interests that you feel the Editor should be aware of when considering your review.")
      }}

      {{nested-question-textarea
        ident="reviewer_report--competing_interests--detail"
        editorStyle='expanded'
        owner=model
        disabled=readOnly
        displayQuestionText=false
        inputClassNames="reviewer_report--competing_interests--detail"
      }}
    </li>

    <li class="question">
      {{nested-question-textarea
        ident="reviewer_report--identity"
        editorStyle='expanded'
        owner=model
        displayContent=true
        disabled=readOnly
        inputClassNames="reviewer_report--identity"
        helpText="Your name and review will not be published with the manuscript."
      }}
    </li>

    <li class="question">
      {{nested-question-textarea
        ident="reviewer_report--comments_for_author"
        editorStyle='expanded'
        owner=model
        displayContent=true
        disabled=readOnly
        inputClassNames="taller reviewer_report--comments_for_author"
        helpText="In reviewing the manuscript, please comment on the novelty and significance of the findings, its technical merit, and the experimental and analytical design.
        Please also comment on the strength and sufficiency of the statistical analysis, on the supplementary information, and whether all data needed to replicate the study are available.
        If you request revisions, please indicate which of your proposed revisions are *essential* to support the current conclusions.
        <br><br><br>
        These comments will be transmitted to the author."
      }}
    </li>

    <li class="question">
      {{nested-question-textarea
        ident="reviewer_report--additional_comments"
        owner=model
        disabled=readOnly
        displayContent=true
        inputClassNames="reviewer_report--additional_comments"
        helpText="Additional comments may include concerns about dual publication, research or publication ethics.
        <br><br>
        These comments will not be transmitted to the authors."
      }}
    </li>

    <li class="question">
      {{nested-question-radio
        ident="reviewer_report--suitable_for_another_journal"
        owner=model
        readOnly=readOnly
        helpText=(concat "If so, please specify which PLOS journal and whether you will be willing to continue there as reviewer on this manuscript. To reduce redundant review cycles, <em>PLOS Biology</em> is committed to facilitating the transfer of suitable manuscripts between journals, and we appreciate your support.")
      }}

      {{nested-question-textarea
        ident="reviewer_report--suitable_for_another_journal--journal"
        editorStyle='expanded'
        owner=model
        inputClassNames="reviewer_report--suitable_for_another_journal--journal"
        displayQuestionText=false
        disabled=readOnly
      }}
    </li>
  </ol>
{{/if}}
