<main id="main-content" class="main-content" role="main">
  <div class="main-content-section">
    <div class="base-screen">
      <div class="task-main-content">
        <h1 class="overlay-body-title">Review Your Submission</h1>
        <p>Please verify that the metadata you entered is correct before completing your submission.</p>
        <table class="table table-hover">
          <tfoot>
          <tr>
            <td>
              {{#link-to 'paper.index'}}
                <button name="task_completed" class="task-completed task-not-completed button-secondary button--green">
                  Make changes
                </button>
              {{/link-to}}
            </td>
            <td>{{flash-messages}}</td>
            <td>
              <button name="task_completed" class="task-completed task-not-completed button-primary button--green pull-right" {{action "submit"}}>
                Submit
              </button>
            </td>
          </tr>
          </tfoot>
          <tbody>
          <tr>
            <th>Preprint</th>
            <td>
              <dl>
                <dt>Would you like to post this paper as a preprint?</dt>
                <dd><mark><b>Yes</b> -- I want to post this paper to the preprint server.</mark></dd>
              </dl>
            </td>
          </tr>
          <tr>
            <th>Title</th>
            <td>
              <p>{{{model.displayTitle}}}</p>
            </td>
          </tr>
          <tr>
            <th>Authors</th>
            <td>
              <p>{{#each model.authors as |author|}}
                  {{author.firstName}} {{author.lastName}}
                {{/each}}</p>
            </td>
          </tr>
          <tr>
            <th>Abstract</th>
            <td>
              <p>{{{model.abstract}}}</p>
            </td>
          </tr>
          <tr>
            <th>Manuscript</th>
            <td>
              <p><a class="" href={{paper-download-link versionedText=fetchVersions format="pdf_with_attachments"}}><i class="fa fa-file-pdf-o"></i> Download PDF</a> </p>
              <p class="muted">Note: Figures and Supplemental Files are included in the PDF.</p>
            </td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
{{outlet}}
