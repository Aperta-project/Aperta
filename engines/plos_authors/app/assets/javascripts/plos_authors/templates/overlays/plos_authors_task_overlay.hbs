<h1>{{title}}</h1>

<div class="authors-overlay-list">
  {{#if isEditable}}
    <a class="button-secondary button--green" {{action "toggleAuthorForm" group}}>Add a New Author</a>
    <br><br>

    {{#if newAuthorFormVisible}}
      {{add-author-form
        institutions=institutions
        hideAuthorForm="toggleAuthorForm"
        saveAuthor="saveNewAuthor"}}
    {{/if}}
  {{/if}}

  {{view ETahi.AuthorDropTargetView index=0}}
  {{#each plosAuthor in sortedAuthors}}
    {{author-view
      isEditable=isEditable
      institutions=institutions
      delete="removeAuthor"
      save="saveAuthor"
      plosAuthor=plosAuthor}}
    {{view ETahi.AuthorDropTargetView index=plosAuthor.position}}
  {{/each}}
</div>
