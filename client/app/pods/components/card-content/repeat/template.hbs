{{#if preview}}
  <div>
    <b style='margin-right: 3px;'>&star;</b>
    This item repeats:&nbsp;
    {{#if initial}} <i>initial</i> = <b>{{initial}}</b> {{/if}}
    {{#if min}} <i>min</i> = <b>{{min}}</b> {{/if}}
    {{#if max}} <i>max</i> = <b>{{max}}</b> {{/if}}
  </div>

  {{#unless inRange}}
    {{partial "repeat-range-error"}}
  {{/unless}}

  {{#each content.children as |child|}}
    {{card-content
      content=child
      disabled=disabled
      owner=owner
      answerChanged=answerChanged
      preview=preview}}
  {{/each}}
{{else if inRange}}
  {{#each (range lowerBound upperBound) as |number|}}
    {{#each content.children as |child|}}
      {{card-content
        content=child
        disabled=disabled
        owner=owner
        answerChanged=answerChanged
        preview=preview}}
    {{/each}}
  {{/each}}
{{else}}
  {{partial "repeat-range-error"}}
{{/if}}
