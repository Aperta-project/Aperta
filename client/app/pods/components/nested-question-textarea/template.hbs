{{#if displayContent}}
  {{#if readOnly}}
    {{#if shouldDisplayQuestionText}}
      <div class="{{textClassNames}} {{concat ident "-question-text"}}">{{{questionText}}}</div>
    {{/if}}

    {{#if answer.value}}
      <div class="answer-text">{{break-to-tag answer.value}}</div>
    {{else}}
      <div class="answer-text no-answer">{{noResponseText}}</div>
    {{/if}}

  {{else}}
    {{#if shouldDisplayQuestionText}}
      <div class="{{textClassNames}} {{concat ident "-question-text"}}">{{{questionText}}}</div>
    {{/if}}

    {{#if helpText}}
      <ul class="question-help {{concat ident "-help-text"}}">{{{helpText}}}</ul>
    {{/if}}

    {{#if unwrappedHelpText}}
      {{{unwrappedHelpText}}}
    {{/if}}

    {{rich-text-editor editorStyle=editorStyle value=answer.value name=ident class=inputClassNames placeholder=placeholderText disabled=disabled onContentsChanged=(action "updateAnswer")}}
  {{/if}}
{{/if}}
