{{partial "task-completed-section"}}

<div class="task-main-content">
  <div class="production-metadata">
    <div class="form-group">
      <div class="inset-form-control required publication-date {{if validationErrors.publicationDate "error"}}">
        {{error-message message=validationErrors.publicationDate class="inset-form-control-text"}}
        <label class="inset-form-control-text">
          {{nested-question-display ident="publication_date" owner=task}}
        </label>
        {{nested-question-date-picker
          ident="publication_date"
          owner=task
          group=group
          role="startPicker"
          displayQuestionText=false
          placeholder="Select Date..."}}
      </div>
    </div>
    <div class="form-group">
      <div class="inset-form-control required volume-number {{if validationErrors.volumeNumber "error"}}">
        <label class="inset-form-control-text">
          {{nested-question-display ident="volume_number" owner=task}}
        </label>
        {{error-message message=validationErrors.volumeNumber class="inset-form-control-text"}}
        <label class="inset-form-control-text">Volume Number</label>
        {{nested-question-input
          ident="volume_number"
          owner=task
          type="number"
          displayQuestionText=false
          placeholder="e.g. 3"}}
      </div>

      <div class="inset-form-control required issue-number {{if validationErrors.issueNumber "error"}}">
        <label class="inset-form-control-text">
          {{nested-question-display ident="issue_number" owner=task}}
        </label>
        {{error-message message=validationErrors.issueNumber class="inset-form-control-text"}}
        {{nested-question-input
          ident="issue_number"
          owner=task
          type="number"
          displayQuestionText=false
          placeholder="e.g. 33"}}
      </div>
    </div>

    <div class="production-notes">
      <label>
        {{nested-question-display ident="production_notes" owner=task}}
      </label>
      {{nested-question-textarea ident="production_notes"
        owner=task
        displayQuestionText=false
        placeholder="Add production notes here..."}}
    </div>
  </div>
</div>
