<div class="card-editor-save-buttons">
  <div class="card-editor-save-buttons-container">
    <button class="button button--blue button-primary editor-save"
            {{action 'saveCard'}}
            disabled={{ null }}>Publish</button>
  </div>
</div>

<div class="card-editor-workspace">
  <div class="card-editor-workspace-container">
    <div class="card-editor-workspace-title">
      <div class="card-editor-workspace-component-type-name">
        Card Title
      </div>
      <h1>{{card.title}}</h1>
    </div>
    <hr />

    {{card-editor/editor/xml-editor card=card}}

  </div>
</div>
