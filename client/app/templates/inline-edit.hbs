{{#if view.isTextItem}}
  {{inline-edit-text bodyPart=view.item
                     editing=view.editing
                     isNew=view.isNew
                     saveModel="saveModel"}}
{{/if}}

{{#if view.isCheckboxItem}}
  {{inline-edit-checkbox bodyPart=view.item
                         editing=view.editing
                         isNew=view.isNew
                         delete=(action "deleteItem")
                         saveModel=(action "saveModel")}}
{{/if}}

{{#if view.isEmailItem}}
  {{inline-edit-email bodyPart=view.item
                      editing=view.editing
                      allUsers=view.allUsers
                      overlayParticipants=view.overlayParticipants
                      isNew=view.isNew
                      isSendable=view.isSendable
                      sendEmail=(action "sendEmail")}}
{{/if}}
