{{view "control-bar"}}
{{flash-messages classNames="flash-messages--below-control-bar"}}

<div id="tahi-container">

  <section class="dashboard-section">
    {{#if invitations.length}}
      <h2 class="welcome-message">
        You have <span class="invitation-count">{{invitations.length}}</span> {{make-plural invitations.length "invitation" "invitations"}}.
      </h2>
      <button class="button-primary button--green" {{action "viewInvitations" invitations}}>View invitations</button>
    {{/if}}
  </section>

  <section id="dashboard-my-submissions" class="dashboard-section">
    <h2 class="welcome-message">
      Hi, {{currentUser.firstName}}.
      {{#if papers.length}}
        You have {{model.totalPaperCount}} {{make-plural model.totalPaperCount "manuscript" "manuscripts"}}.
      {{else}}
        You have no manuscripts.
      {{/if}}
    </h2>

    <button class="button-primary button--green" {{action "showNewPaperOverlay"}}>Create New Submission</button>
    {{#if hasPapers}}
      <ul class="dashboard-submitted-papers">
        {{#each sortedPapers as |paper|}}
          {{dashboard-link model=paper unreadComments=unreadComments}}
        {{/each}}
      </ul>
      {{#if paginate}}
        <a {{action "loadMorePapers"}} href="#" class="button-secondary button--green load-more-papers">
          Load More
        </a>
      {{/if }}
    {{else}}
      <p class="dashboard-info-text">Your scientific paper submissions will<br> appear here.</p>
    {{/if}}
  </section>
</div>
