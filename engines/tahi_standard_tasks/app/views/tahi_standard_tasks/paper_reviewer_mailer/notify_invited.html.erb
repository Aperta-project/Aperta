<div class='container'>
  <div class='greeting'>
    <p class='message'>
      Hello, <%= @invitee.full_name %> - You've been invited to be a reviewer on a manuscript
    </p>
  </div>
  <hr>
  <div class='paper-info'>
    <div class='journal-info'>
      <% if @paper.journal.logo_url %>
        <img class='journal-logo' src='<%= @paper.journal.logo_url %>'>
      <% else %>
        <div class='journal-name'>
          <%= @paper.journal.name %>
        </div>
      <% end %>
    </div>

    <div class='custom-email'>
      <%= simple_format @task.body[0] %>
    </div>

  </div>
  <div class='footer'>
    <a class='button' href='<%= client_dashboard_url %>' target='_blank'>
      View Invitation
    </a>
    <hr>
    <div class='paper-title'>
      "<%= @paper.display_title %>"
    </div>
    <div class='paper-abstract'>
      <%= @paper.abstract %>
    </div>
  </div>
</div>
