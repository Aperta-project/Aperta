{{#each repetitions as |rep|}}
  <div class="well">
    {{#each content.children as |child|}}
      {{card-content
        content=child
        disabled=disabled
        owner=owner
        answerChanged=answerChanged
        repetition=rep
        preview=preview}}
    {{/each}}
    <a class="button-secondary button--red remove {{if minRepetitionsReached "button--disabled"}}" {{action "deleteRepetition" rep}}>{{deleteLabelText}}</a>
  </div>
{{/each}}
<a class="button-secondary button--blue add {{if maxRepetitionsReached "button--disabled"}}" {{action "addRepetition"}}>{{addLabelText}}</a>
