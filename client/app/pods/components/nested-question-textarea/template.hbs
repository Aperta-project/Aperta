{{#if readonly}}
  <div class="question-text">{{model.text}}</div>
  {{#if answerModel.value}}
    <div class="answer-text">{{answerModel.value}}</div>
  {{else}}
    <div class="answer-text no-answer">{{noResponseText}}</div>
  {{/if}}
{{else}}
  {{#if model}}
    <div class="question-text">{{{model.text}}}</div>
  {{/if}}

  {{#if helpText}}
    <ul class="question-help">{{{helpText}}}</ul>
  {{/if}}
  {{textarea name=ident value=answerModel.value class="form-control" disabled=disabled}}
{{/if}}
