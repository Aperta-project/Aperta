<div class="row">
  <div class="col-sm-2" style="color:grey;">
    Date Sent:
  </div>
  <div class="col-sm-10">
    {{format-date message.date}}
  </div>
</div>
<div class="row hide">
  <br>
  <div class="col-sm-2" style="color:grey;">
    Description:
  </div>
  <div class="col-sm-10">

  </div>
</div>
<div class="row">
  <br>
  <div class="col-sm-2" style="color:grey;">
    From:
  </div>
  <div class="col-sm-10">
    {{message.sender}}
  </div>
</div>
<div class="row">
  <br>
  <div class="col-sm-2" style="color:grey;">
    To:
  </div>
  <div class="col-sm-10">
    {{message.recipient}}
  </div>
</div>
<div class="row">
  <br>
  <div class="col-sm-2" style="color:grey;">
    Subject:
  </div>
  <div class="col-sm-10">
    {{message.subject}}
  </div>
</div>
<div class="row hide">
  <br>
  <div class="col-sm-2" style="color:grey;">
    CC:
  </div>
  <div class="col-sm-10">

  </div>
</div>
<div class="row hide">
  <br>
  <div class="col-sm-2" style="color:grey;">
    BCC:
  </div>
  <div class="col-sm-10">

  </div>
</div>
<hr>
<div class="row">
  <div class="col-sm-12">
    <iframe srcdoc={{message.body}} width="100%" height="400px" frameborder="0"></iframe>
  </div>
</div>
