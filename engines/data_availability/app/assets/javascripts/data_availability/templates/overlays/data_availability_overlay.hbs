<h1>Data Availability</h1>

<form>
  <ol>
    <li>
      {{question-radio ident="data_availability.fully_available" task=model
                       question="Do the authors confirm that all the data underlying the findings described in their manuscript are fully available without restriction?"
                       helpText="Please see the <a href='#'>PLOS Data Policy</a> for details."}}
    </li>

    <li class="question">
      <p>
        Please provide the location of each dataset analyzed in the manuscript.
      </p>
      <div class="help">
        Select all that apply
      </div>
      <ul class="list-unstyled">
        <li>
          {{#question-check ident="data_availability.public_repo_available" task=model
                            question="Public repository: DOI/accession numbers are available now"}}
            <p>Provide the DOI/accession number and its corresponding public repository URL.</p>
            <div>{{input type="text" value=view.model.additionalData.url}}</div>
          {{/question-check}}
        </li>

        <li>
          {{#question-check ident="data_availability.public_repo_available_post_release" task=model
                            question="Public repository: DOI/accession numbers will be available after acceptance"}}
            <p>Provide the public repository URL.</p>
            <div>{{input type="text"}}</div>
          {{/question-check}}
        </li>

        <li>
          {{question-check ident="data_availability.supporting_info_included" task=model
                           question="Supporting information files are/will be included with the manuscript"}}
        </li>

        <li>
          {{question-check ident="data_availability.included" task=model
                           question="All data are included within the manuscript"}}
        </li>

        <li>
          {{#question-check ident="data_availability.on_request" task=model
                           question="Available upon request (this option is only permitted in limited cases)"}}
            <div>{{input type="text" placeholder="Title of dataset"}}</div>
            <div>{{input type="text" placeholder="Description of dataset"}}</div>
            <div>{{textarea placeholder="Ethical / legal reasons why dataset is unavailable for public deposit"}}</div>
            <div>{{textarea placeholder="Contact information for the group or individual(s) responsible for providing access to this data"}}</div>
          {{/question-check}}
        </li>
        <li>
          {{#question-check ident="data_availability.third_party" task=model
                            question="Data are held by someone other than the authors and are not in a public repository"}}
            <div>{{input type="text" placeholder="Title of dataset"}}</div>
            <div>{{input type="text" placeholder="Description of dataset"}}</div>
            <div>{{textarea placeholder="Ethical / legal reasons why dataset is unavailable for public deposit"}}</div>
            <div>{{textarea placeholder="Contact information for the group or individual(s) responsible for providing access to this data"}}</div>
          {{/question-check}}
        </li>
        <li>
          {{#question-check ident="data_availability.unavailable" task=model
                            question="Dataset is not available (This may be contradictory to the PLOS data policy)"}}
            <div>{{input type="text" placeholder="Title of dataset"}}</div>
            <div>{{input type="text" placeholder="Description of dataset"}}</div>
            <div>{{textarea placeholder="Ethical / legal reasons why dataset is unavailable for public deposit"}}</div>
          {{/question-check}}
        </li>
      </ul>
    </li>
  </ol>
</form>

