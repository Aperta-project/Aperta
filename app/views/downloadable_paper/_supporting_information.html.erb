<% if supporting_information_files.any? %>
  <div class="supporting-information-files">
    <h2 id='si_header'>Supporting Information</h2>
    <% supporting_information_files.each do |file| %>
      <% if false # TODO APERTA-9406 Re-enable SI previews or don't %>
        <p>
          <a href='<%= file.href(is_proxied: true, only_path: false) %>'>
            <img
                class='si_preview'
                id="si_preview_<%= file.id %>"
                src="<%= file.href(version: :preview, is_proxied: should_proxy_previews) %>"
            />
          </a>
        </p>
      <% end %>
        <p><a class='si_link' id='si_link_<%= file.id %>' href='<%= file.href(is_proxied: true, only_path: false) %>'><%= file.filename %></a></p>
    <% end %>
  </div>
<% end %>
