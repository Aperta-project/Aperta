{{#if isProcessing}}
    <div class="processing-attachment">
      {{progress-spinner visible=true size="small"}} Processing {{attachment.title}} ...
      {{#unless disabled}}
        <a class="upload-cancel-link" {{action "cancelUpload"}} title="Cancel file processing">cancel</a>
      {{/unless}}
    </div>
{{else}}
  <a href="{{attachment.src}}" class="attachment-file-link" target="_blank">
    <i class="fa {{fileTypeClass}}"></i> {{attachment.title}}
  </a>
{{/if}}

{{#if draft}}
  <span {{action "triggerFileSelection"}} class="file-action replace-attachment">
    {{fa-icon icon="refresh"}}
    Replace
  </span>
  {{file-uploader class="update-attachment"
                         accept=accept
                         filePrefix=filePath
                         multiple=multiple
                         disabled=disabled
                         progress=attrs.progress
                         done=(action 'uploadFinished')
                         start=attrs.start }}

  <span {{action "deleteFile"}} class="file-action delete-attachment">
    {{fa-icon icon="trash"}}
    Delete
  </span>
{{/if}}
