<div class="supporting-information-file-snapshot-label">
  File:
</div>
{{#if fileHashChanged}}
  {{! If the file contents changed, still show a diff on the file name }}
  <span class="removed">{{file1}}</span><span class="added">{{file2}}</span>
{{else}}
  {{text-diff viewingText=file1 comparisonText=file2}}
{{/if}}

<div class="supporting-information-file-snapshot-label">
  Title:
</div>
<div class="supporting-information-file-snapshot-title">
  {{text-diff viewingText=title1 comparisonText=title2}}
</div>

<div class="supporting-information-file-snapshot-label">
  Caption:
</div>
{{text-diff viewingText=caption1 comparisonText=caption2}}

<div class="supporting-information-file-snapshot-label">
  Publishable:
</div>
{{boolean-diff viewingBool=publishable1 comparisonBool=publishable2}}

<div class="supporting-information-file-snapshot-label">
  Striking Image:
</div>
{{boolean-diff viewingBool=strikingImage1 comparisonBool=strikingImage2}}
