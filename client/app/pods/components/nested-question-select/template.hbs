{{#if readOnly}}
  {{#if shouldDisplayQuestionText}}
    <div class="{{textClassNames}}">{{{questionText}}}</div>
  {{/if}}

  {{#if answer.value}}
    <div class="answer-text">{{answer.value}}</div>
  {{else}}
    <div class="answer-text no-answer">{{noResponseText}}</div>
  {{/if}}

{{else}}
  {{select-2-single class=class
                    minimumResultsForSearch=minimumResultsForSearch
                    placeholder=placeholderText
                    selectedData=selectedData
                    selectionSelected="selectionSelected"
                    source=source
                    value=answer.value
                    dropdownCssClass=dropdownCssClass
                    width=width
                    enable=enable}}
{{/if}}
