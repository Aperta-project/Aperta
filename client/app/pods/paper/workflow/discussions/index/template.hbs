<div class="sheet-content">
  <div class="discussions-index-header">
    <h1>Discussions</h1>
    {{link-to "Create New Topic" "paper.workflow.discussions.new" class="button-secondary button--green"}}
  </div>

  <br><br>
  {{#each model as |topic|}}
    {{#link-to "paper.workflow.discussions.show" topic class="discussions-index-topic"}}
      {{#if topic.unreadCount}}
        <span class="badge">{{topic.unreadCount}}</span>
      {{/if}}
      {{topic.title}}
    {{/link-to}}
  {{/each}}
</div>
