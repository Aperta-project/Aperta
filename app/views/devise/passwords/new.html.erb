<div class="auth-container">
  <h1>Forgot your password?</h1>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "auth-left" }) do |f| %>
    <%= devise_error_messages! %>

    <div class="auth-field auth-field--text-input">
      <%= f.email_field :email, :autofocus => true, placeholder: "Email" %>
    </div>

    <div><%= f.submit "Send reset password instructions", class: "button-primary button--green" %></div>
  <% end %>

  <div class="auth-right">
    <%= render "devise/shared/links" %>
  </div>
</div>
