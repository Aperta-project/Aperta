<h1>{{model.title}}</h1>
<div>
  <ul class="participants">
    {{#each p in participants}}
      <li class='participant'>{{userThumbnail p}}</li>
    {{/each}}
    <li class="chosen-style-override participant">
      {{chosen content=availableParticipants
               name="participants"
               width="150px"
               prompt="Add People"
               value=selectedUser
               optionValuePath="content"
               optionLabelPath="content.fullName"}}
    </li>
  </ul>
</div>

<ul class="message-comments">
  {{#each comment in comments}}
    <li class="message-comment">
      {{userThumbnail comment.commenter}}
      <span class="comment-date">
        {{formattedTime comment.createdAt}}
      </span>
      <span class="comment-name">{{comment.commenter.fullName}} posted</span>
      <div class="comment-body">{{comment.body}}</div>
    </li>
  {{/each}}
</ul>

<div class="form-group">
  {{textarea classNames="new-comment" value=newCommentBody placeholder="Type your message here"}}
</div>

<div class="comment-buttons message-overlay">
  <a class="message-color" {{action 'clearMessageContent'}}>Cancel</a>
  <button type="submit" class="secondary-button message" {{action 'postComment'}}>Post Message</button>
</div>
