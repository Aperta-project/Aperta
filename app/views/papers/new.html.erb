<% if @paper.errors.present? %>
  <div class="alert alert-warning"><%= @paper.errors.full_messages.to_sentence %></div>
<% end %>

<%= form_for @paper do |f| %>
  <div class="form-group">
    <%= f.label :short_title %>
    <%= f.text_field :short_title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :journal_id %>
    <%= f.select :journal_id, Journal.pluck(:name, :id), class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :paper_type %>
    <%= f.select :paper_type, Paper::PAPER_TYPES.map { |t| [t.humanize, t] } %>
  </div>
  <button type="submit" class="btn btn-default">Create</button>
<% end %>
