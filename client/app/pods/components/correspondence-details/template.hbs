<div class="row">
  <div class="col-sm-2" style="color:grey;">
    Date Sent:
  </div>
  <div class="col-sm-10 correspondence-date">
    {{format-date message.date}}
  </div>
</div>
<div class="row hide">
  <br>
  <div class="col-sm-2" style="color:grey;">
    Description:
  </div>
  <div class="col-sm-10">

  </div>
</div>
<div class="row">
  <br>
  <div class="col-sm-2" style="color:grey;">
    From:
  </div>
  <div class="col-sm-10 correspondence-sender">
    {{message.sender}}
  </div>
</div>
<div class="row">
  <br>
  <div class="col-sm-2" style="color:grey;">
    To:
  </div>
  <div class="col-sm-10 correspondence-recipient">
    {{message.recipient}}
  </div>
</div>
<div class="row">
  <br>
  <div class="col-sm-2" style="color:grey;">
    Subject:
  </div>
  <div class="col-sm-10 correspondence-subject">
    {{message.subject}}
  </div>
</div>
<div class="row hide">
  <br>
  <div class="col-sm-2" style="color:grey;">
    CC:
  </div>
  <div class="col-sm-10">

  </div>
</div>
<div class="row hide">
  <br>
  <div class="col-sm-2" style="color:grey;">
    BCC:
  </div>
  <div class="col-sm-10">

  </div>
</div>
{{#if message.hasAnAttachment}}
  <div class="row">
    <br>
    <div class="col-sm-2" style="color:grey;">
      <span class="fa fa-paperclip" id="correspondence-attachment-paperclip"></span>:
    </div>
    <div class="col-sm-10">
      {{#each message.attachments as |attachment|}}
        <a href="{{attachment.src}}" class="correspondence-attachment-link" target="_blank">
          <i class="fa {{file-type attachment.filename}}"></i> 
          &nbsp;{{attachment.filename}}
        </a>
      {{/each}}
    </div>
  </div>
{{/if}}  
<hr>
<div class="row">
  <div class="col-sm-12">
    <iframe srcdoc={{break-to-tag message.body}} width="100%" height="400px" frameborder="0"></iframe>
  </div>
</div>
