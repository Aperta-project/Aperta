{{inline-edit-h1 title=title setTitle="setTitle"}}

<div class="task-body">
  {{#each block in body}}
    {{#inline-edit-body-part
      block=block
      cancel="resetBlock"
      save="saveBlock"
      delete="deleteBlock"
      model=model
      addItem="addCheckboxItem"}}
      {{#each item in block}}
        {{inlineEdit item allUsers participants
          delete="deleteItem"
          saveModel="saveModel"
          sendEmail="sendEmail"}}
      {{/each}}
    {{/inline-edit-body-part}}
  {{/each}}
  {{#each block in newBlocks}}
    {{#inline-edit-body-part
      block=block
      editing=true
      cancel="resetBlock"
      save="saveBlock"
      delete="deleteBlock"
      model=model
      addItem="addCheckboxItem"}}
      {{#each item in block}}
        {{inlineEdit item allUsers participants
          isNew=true
          delete="deleteItem"
          saveModel="saveModel"
          sendEmail="sendEmail"}}
      {{/each}}
    {{/inline-edit-body-part}}
  {{/each}}
</div>

