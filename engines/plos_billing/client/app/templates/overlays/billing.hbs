<h1>
  Publication Fees
</h1>

<h3>
  Enter Payee Details
</h3>

<div class="add-author-form billing-card">
  <div class="form-group form-inline author-top">
    <div {{bind-attr class=":form-group :author-half validationErrors.firstName:error"}}>
      <span class="text-field-title">
        First Name
        {{error-message message=null}}
      </span>
      {{question-input ident="plos_billing.first_name"
                       task=model
                       question='Jane'}}
    </div>

    <div {{bind-attr class=":form-group :author-half :author-bump validationErrors.lastName:error"}}>
      <span class="text-field-title">
        Last Name
        {{error-message message=null}}
      </span>
      {{question-input ident="plos_billing.last_name"
                       task=model
                       question='Goodall'}}
    </div>
  </div>
  <div class="form-group form-inline">
    <div {{bind-attr class=":form-group :author-half validationErrors.title:error"}}>
      <span class="text-field-title">
        Title
        {{error-message message=null}}
      </span>
      {{question-input ident="plos_billing.title"
                       task=model
                       question="World's Foremost Expert on Chimpanzees"}}
    </div>

    <div {{bind-attr class=":form-group :author-half :author-bump validationErrors.department:error"}}>
      <span class="text-field-title">
        Department
        {{error-message message=null}}
      </span>
      {{question-input ident="plos_billing.department"
                       task=model
                       question='Primatology'}}
    </div>
  </div>
  <div class="form-group form-inline">
    <div {{bind-attr class=":form-group :author-half validationErrors.affiliation:error"}}>
      {{error-message message=null}}
      {{question-select ident="plos_billing.affiliation1"
                        task=model
                        question="Affiliation"
                        class="affiliation-field"
                        source=ringgold}}
    </div>

    <div {{bind-attr class=":form-group :author-half :author-bump validationErrors.secondaryAffiliation:error"}}>
      {{error-message message=null}}
      {{question-select ident="plos_billing.affiliation2"
                        task=model
                        question="Secondary Affiliation (optional)"
                        class="secondary-affiliation-field"
                        source=ringgold}}
    </div>
  </div>
  <div class="form-group form-inline">
    <div {{bind-attr class=":form-group :author-half validationErrors.email:error"}}>
      <span class="text-field-title">
        Phone
        {{error-message message=null}}
      </span>
      {{question-input ident="plos_billing.phone_number"
                       task=model
                       question="415-555-5555"}}

    </div>
    <div {{bind-attr class=":form-group :author-half :author-bump validationErrors.email:error"}}>
      <span class="text-field-title">
        Email
        {{error-message message=null}}
      </span>
      {{question-input ident="plos_billing.email_address"
                       task=model
                       question="jane.goodll@science.com"}}

    </div>
  </div>
  <div class="form-group form-inline">
    <div {{bind-attr class="validationErrors.department:error"}}>
      <span class="text-field-title">
        Address Line 1 (optional)
        {{error-message message=null}}
      </span>
      {{question-input ident="plos_billing.address1"
                       task=model
                       question="1581 Le Roy Ave"}}
    </div>
  </div>
  <div class="form-group form-inline">
    <div {{bind-attr class="validationErrors.department:error"}}>
      <span class="text-field-title">
        Address Line 2 (optional)
        {{error-message message=null}}
      </span>
      {{question-input ident="plos_billing.address2"
                       task=model
                       question="Suite 3"}}
    </div>
  </div>
  <div class="form-group form-inline">
    <div {{bind-attr class=":form-group :author-half validationErrors.department:error"}}>
      <span class="text-field-title">
        City
        {{error-message message=null}}
      </span>
      {{question-input ident="plos_billing.city"
                       task=model
                       question="Berkley"}}
    </div>

    <div {{bind-attr class=":form-group :author-name :author-bump validationErrors.department:error"}}>
      {{question-select ident="plos_billing.state"
                        task=model
                        question="Select State"
                        source=states}}
    </div>
    <div {{bind-attr class=":form-group :author-name validationErrors.department:error"}}>
      <span class="text-field-title">
        Postal Code
        {{error-message message=null}}
      </span>
      {{question-input ident="plos_billing.postal_code"
                       task=model
                       question="94708"}}
    </div>
  </div>
  <div class="form-group form-inline">
    <div {{bind-attr class=":form-group :author-half validationErrors.department:error"}}>
      {{error-message message=null}}
      {{question-select ident="plos_billing.country"
                        task=model
                        question="Please select your Country"
                        source=countries}}
    </div>
  </div>
</div>

<hr>

<h2>
  Payment Options
</h2>

{{partial "intro"}}

<ol class='question-list'>
  <li class="question">
    <h3>
      How would you like to pay?
    </h3>

    <div {{bind-attr class=":form-group :author-half :author-bump :payment-method validationErrors.affiliation:error"}}>
      {{error-message message=null}}
      {{question-select ident="plos_billing.payment_method"
                        task=model
                        question="Select One"
                        class="affiliation-field"
                        selectionSelected='paymentMethodSelected'
                        source=responses
                        width="resolve"}}
    </div>
  </li>

  {{partial 'self_payment'}}
  {{partial 'institutional'}}
  {{partial 'gpi'}}
  {{partial 'pfa'}}
  {{partial 'special_collection'}}
</ol>
