<div class="control-bar">
  <div class="control-bar-inner-wrapper">
    <ul>
      {{#if journal.logoUrl}}
        <li id="control-bar-paper-journal-logo" class="control-bar-item">
          <img src="{{unbound journal.logoUrl}}">
        </li>
      {{/if}}
      <li id="control-bar-paper-short-title" class="control-bar-item">
        <h2 class="tasks-paper-title">{{shortTitle}}</h2>
      </li>
    </ul>
    <ul>
      <li class="control-bar-item">
        {{#link-to "paper.edit" model class="control-bar-link"}}
          {{partial "svg/manuscript-icon"}}
          <span class="manuscript">Manuscript</span>
        {{/link-to}}
      </li>
    </ul>
  </div>
</div>


<div id="manuscript-manager">
  <div class="columns">
    {{add-column position=-1 action="addPhase" bonusClass="first-add-column"}}
    {{#each phase in sortedPhases}}
      {{view "ETahi.ManuscriptManagerColumnView" phase=phase}}
    {{/each}}
  </div>
</div>
