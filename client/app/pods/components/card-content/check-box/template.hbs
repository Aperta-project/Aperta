{{#if content.text}}
  <p class="content-text">{{{content.text}}}
    {{#if content.isRequired}}
      <span class="required-field">{{#unless answer.wasAnswered}}*{{else}}&nbsp;{{/unless}}</span>
    {{/if}}</p>
{{/if}}

{{check-box
  name=name
  id=name
  checked=answer.value
  disabled=disabled
  content=content
  answer=answer
  action="valueChanged"}}
{{#if content.label}}
  <label for={{name}}>{{{content.label}}}</label>
{{/if}}
<p>{{card-content/validation-errors errors=answer.readyIssuesArray}}</p>
{{card-content/display-children
content=content
owner=owner
disabled=disabled
preview=preview}}
