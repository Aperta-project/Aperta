<div class="control-bar">
  <div class="control-bar-inner-wrapper">
    <ul>
      <li class="control-bar-item">
        <div class="control-bar-link control-bar-link--with-icon add-flow-column-button" {{action "chooseNewFlowManagerColumn"}}>
          <div class="control-bar-link-icon"><span class="glyphicon glyphicon-plus"></span></div>
          <div class="control-bar-link-text">Add New Column</div>
        </div>
      </li>
    </ul>
  </div>
</div>

{{flash-messages classNames="flash-messages--below-control-bar"}}

<ul class="columns">
  {{#each model as |flow|}}
    {{flow-column flow=flow
                  papers=flow.papers
                  commentLooks=commentLooks
                  editable=false
                  journalName=flow.journalName
                  journalLogo=flow.journalLogo
                  saveFlow="saveFlow"
                  removeFlow="removeFlow"
                  viewCard="viewCard"}}
  {{/each}}
</ul>
