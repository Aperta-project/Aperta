<div id={{_generatedId}}
     class="select-box-element {{if _showOptions "select-box-element--active"}}"
     {{action "toggleShowOptions"}}>
  {{#if attrs.selectedItem}}
    {{yield attrs.selectedItem}}
  {{else}}
    {{#if attrs.placeholder}}
     {{attrs.placeholder}}
    {{/if}}
  {{/if}}
</div>

{{#if _showOptions}}
  {{#floating-list positionNearSelector=_generatedIdSelector
                   setMaxHeight=true
                   class="select-box-list"
                   positionOver=true}}
    {{#if attrs.allowDeselect}}
      <div role="option"
           class="select-box-item select-box-item--placeholder"
           {{action "clearSelection"}}>
        {{attrs.placeholder}}
      </div>
    {{/if}}
    {{#each items as |item|}}
      <div aria-selected={{is-equal item selectedItem}}
           class="select-box-item"
           {{action "makeSelection" item}}>
        {{yield item}}
      </div>
    {{/each}}
  {{/floating-list}}
{{/if}}
