<div class="auth-container">
  <h1>Change your password</h1>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, class: "auth-left"}) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class="auth-field auth-field--text-input">
      <%= f.password_field :password, :autofocus => true, placeholder: "New password" %>
    </div>

    <div class="auth-field auth-field--text-input">
      <%= f.password_field :password_confirmation, placeholder: "Confirm new password" %>
    </div>

    <%= f.submit "Change my password", class: "button-primary button--green" %>
  <% end %>

  <div class="auth-right">
    <%= render "devise/shared/links" %>
  </div>
</div>
