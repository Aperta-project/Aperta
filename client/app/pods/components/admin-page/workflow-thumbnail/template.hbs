{{#if confirmDestroy}}
  <div class="admin-workflow-thumbnail-overlay" {{action "doNothing" bubbles=false}}>
    <p>This will permanently delete your template. Are you sure?</p>
    <button class="button-secondary button--blue knockout" {{action "hideConfirmDestroy" bubbles=false}}>Cancel</button>
    <button class="button-secondary button--blue knockout admin-workflow-thumbnail-delete-button" {{action "destroyWorkflow" bubbles=false}}>Delete</button>
  </div>
{{/if}}

<div class="admin-workflow-thumbnail-outer">
  {{#if canDestroy}}
    <div class="admin-workflow-thumbnail-icon" {{action "toggleConfirmDestroy" bubbles=false}}>
        {{fa-icon "trash"}}
    </div>
  {{/if}}
  <div class="admin-workflow-thumbnail">
    <div class="admin-workflow-thumbnail-header">
      <h4 class="admin-workflow-thumbnail-name">
        {{workflow.paperType}}
      </h4>
      <div class="admin-workflow-thumbnail-journal">
        {{ workflow.journal.name }}
      </div>
    </div>
    <div class="admin-workflow-thumbnail-footer">
      <div class="admin-workflow-thumbnail-updated">
        Last updated: {{ format-date workflow.updatedAt format='short-date'}}
      </div>
      <div class="admin-workflow-thumbnail-active-manuscripts">
        {{ workflow.activePaperCount }} Active {{ pluralize-string count=workflow.activePaperCount string="Manuscript" }}
      </div>
    </div>
  </div>
</div>
