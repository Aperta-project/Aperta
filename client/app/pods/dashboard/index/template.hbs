<div class="control-bar"></div>
{{flash-messages classNames="flash-messages--below-control-bar"}}

<div id="tahi-container">

  <section class="dashboard-section">
    {{#if pendingInvitations}}
      <h2 class="welcome-message">
        You have <span class="invitation-count">{{pluralize pendingInvitations.length "invitation"}}</span>.
      </h2>
      <button class="button-primary button--green" {{action "viewInvitations"}}>View invitations</button>
    {{/if}}
  </section>

  <section id="dashboard-my-submissions" class="dashboard-section">
    <h2 class="welcome-message">
      Hi, {{currentUser.firstName}}.
      {{#if papers.length}}
        You have {{pluralize totalPaperCount "manuscript"}}.
      {{else}}
        You have no manuscripts.
      {{/if}}
    </h2>

    <button class="button-primary button--green" {{action "showNewPaperOverlay"}}>Create New Submission</button>


<br>
<br>
<br>
    <div class="row">
      <div class="table-responsive">
        <table summary="This table displays manuscript data and roles" class="table-borderless table-hover">
          <thead>
            <tr>
              <th class="col-xs-9">Active Manuscripts (9)</th>
              <th class="col-xs-1 text-center">Role</th>
              <th class="col-xs-2 text-center">Status</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="col-xs-9">The most scrumtrulescent scientific paper of 2015.</td>
              <td class="col-xs-1 text-right">Author</td>
              <td class="col-xs-2"><div class='status-tag'>DRAFT</div></td>
            </tr>
            <tr>
              <td class="col-xs-9">The most scrumtrulescent scientific paper of 2015.</td>
              <td class="col-xs-1 text-right">Collaborator</td>
              <td class="col-xs-2">Checking</td>
            </tr>
            <tr>
              <td class="col-xs-9">The most scrumtrulescent scientific paper of 2015.</td>
              <td class="col-xs-1 text-right">Collaborator</td>
              <td class="col-xs-2">In Revision</td>
            </tr>
            <tr>
              <td class="col-xs-9">The most scrumtrulescent scientific paper of 2015.</td>
              <td class="col-xs-1 text-right">Collaborator</td>
              <td class="col-xs-2">Accepted</td>
            </tr>
          </tbody>
          <tfoot>
            <tr>
              <td colspan="5" class="text-center">.</td>
            </tr>
          </tfoot>
        </table>
      </div><!--end of .table-responsive-->
    </div>
<br>
<br>
<br>


    {{#if hasPapers}}
      <ul class="dashboard-submitted-papers">
        {{#each sortedPapers as |paper|}}
          {{dashboard-link model=paper}}
        {{/each}}
      </ul>
      {{#if canLoadMore}}
        <button {{action "loadMorePapers"}} href="#" class="button-secondary button--green load-more-papers">
          Load More
        </button>
      {{/if }}
    {{else}}
      <p class="dashboard-info-text">Your scientific paper submissions will<br> appear here.</p>
    {{/if}}
  </section>
</div>
