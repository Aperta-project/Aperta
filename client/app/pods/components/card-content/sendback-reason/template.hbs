<div class="sendback-reason-row">
  {{#if hasText}}
    <div class="card-form-text">
      {{{content.text}}}
    </div>
  {{/if}}

  {{card-content
    content=checkbox
    disabled=disabled
    owner=owner
    answerChanged=answerChanged
    hasAnswerContainer=false
    repetition=repetition
    preview=preview
  }}

  {{#if checkboxAnswer.value}}
    {{#card-content
      content=pencil
      disabled=disabled
      owner=owner
      repetition=repetition
      hasAnswerContainer=false
      preview=preview as |cc|
    }}
    <i class="fa fa-pencil" {{action 'toggleAnswer' cc.answer}}></i>
    {{/card-content}}
  {{/if}}
</div>

{{#if showText}}
  <div class="card-content-field-set">
    {{card-content
      content=textarea
      disabled=disabled
      hasAnswerContainer=false
      owner=owner
      repetition=repetition
      preview=preview}}
  </div>
{{/if}}
