<div class="epub-css">
  <div class="admin-header row">
    <div class='relative'>
      <h2 class="title col-md-5">ePub CSS</h2>

      <div class='epub-cover-upload col-md-2 pull-right'>
        <a class="primary-button blue-box" href='#' data-toggle="modal" data-target="#edit-epub-css-modal">EDIT EPUB CSS</a>
      </div>

      <div class="modal" id="edit-epub-css-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h4 class="modal-title" id="myModalLabel">Modal title</h4>
            </div>
            <div class="modal-body">
              {{textarea classNames="epub-css-content" value=epubCss placeholder="Type your ePub CSS here"}}
            </div>
            <div class="modal-footer">
              <a data-dismiss="modal" href='#'>Cancel</a>
              <button type="button" class="btn btn-primary">Save</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
