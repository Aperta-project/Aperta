{{inline-edit-h1 title=title setTitle="setTitle"}}

<div class="task-body">
  {{#each block in template}}
    {{#inline-edit-body-part
      block=block
      cancel="resetBlock"
      save="saveBlock"
      delete="deleteBlock"
      emailSentStates=emailSentStates
      addItem="addCheckboxItem"}}
      {{#each item in block}}
        {{inlineEdit item null null
          isSendable=false
          delete="deleteItem"}}
      {{/each}}
    {{/inline-edit-body-part}}
  {{/each}}
  {{#each block in newBlocks}}
    {{#inline-edit-body-part
      block=block
      editing=true
      cancel="resetBlock"
      save="saveBlock"
      delete="deleteBlock"
      emailSentStates=emailSentStates
      addItem="addCheckboxItem"}}
      {{#each item in block}}
      {{inlineEdit item null null
          isNew=true
          isSendable=false
          delete="deleteItem"}}
      {{/each}}
    {{/inline-edit-body-part}}
  {{/each}}
</div>

