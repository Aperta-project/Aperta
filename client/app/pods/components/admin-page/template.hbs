{{#left-drawer as |toggle|}}
  {{#left-drawer/drawer title="Journals" onToggle=toggle}}
    {{#if multipleJournals}}
      {{admin-page/drawer-item initials="All" title="All My Journals"}}
    {{/if}}
    {{#each sortedJournals as |journal|}}
      {{admin-page/drawer-item initials=journal.initials title=journal.name id=journal.id}}
    {{/each}}
  {{/left-drawer/drawer}}

  {{#left-drawer/prevent-overlap}}
    {{admin-page/tab-bar}}
    {{flash-messages}}

    <div class="admin-page-content">
      {{yield}}
    </div>

  {{/left-drawer/prevent-overlap}}

{{/left-drawer}}
