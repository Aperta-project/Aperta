<fieldset>
  {{#if content.text}}
    <legend>{{{content.text}}}
      {{#if content.isRequired}}
        {{#unless answer.wasAnswered}}<span class="required-field">*</span>{{/unless}}
      {{/if}}
    </legend>
  {{/if}}
  {{card-content/validation-errors errors=answer.readyIssuesArray}}
  <label for={{name}}>{{check-box
    name=name
    id=name
    checked=answer.value
    disabled=disabled
    content=content
    answer=answer
    action="valueChanged"}}{{{content.label}}}
  </label>
  {{card-content/display-children
  content=content
  owner=owner
  disabled=disabled
  preview=preview}}
</fieldset>
