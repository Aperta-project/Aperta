<h1>Financial Disclosures</h1>

<div class="question-list">
  <div class="question">
    <div class="question-text">Did any of the authors receive specific funding for this work?</div>

    {{binary-radio-button name="received-funding"
                          selection=receivedFunding
                          yesAction="choseFundingReceived"
                          noAction="choseFundingNotReceived"}}

    {{#if explicitYes}}
      <span>Please describe all sources of funding that have supported your work.</span>
    {{/if}}
    {{#if explicitNo}}
      <span>Your Financial Disclosure Statement will appear as: The author(s) received no specific funding for this work.</span>
    {{/if}}
  </div>

  {{#each funder in funders}}
    <div class="question-dataset">
      {{render "funder" funder}}
    </div>
  {{/each}}

  {{#if receivedFunding}}
    <button class="button-secondary button--green" {{action "addFunder"}}>Add Another Funder</button>
  {{/if}}
</div>
