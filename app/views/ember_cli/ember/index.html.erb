<%= render_ember_app :tahi do |head, body| %>
  <% head.append do %>
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= csrf_meta_tags %>
    <script type='text/javascript'>
      window.appName = "<%= app_name %>"
    </script>
  <% end %>

  <% body.append do %>
    <script type="text/javascript">
      window.eventStreamConfig = <%= TahiPusher::Config.to_json.html_safe %>;
      <% if current_user %>
          window.currentUserData = <%= CurrentUserSerializer.new(current_user, root: :user).to_json.html_safe %>;
      <% end %>
    </script>
  <% end %>
<% end %>
