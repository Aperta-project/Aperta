<div class="control-bar">
  <div class="control-bar-inner-wrapper">
    <ul>
      <li>
        <a class="add-column-button secondary-button" {{action 'displayChangeOverlay'}}>
          Add New Column <span class="glyphicon glyphicon-plus"></span>
        </a>
      </li>
    </ul>
  </div>
</div>

<ul class="columns">
  {{#each flow in content}}
    <li class="column">
      <div class="column-header">
        <h2 class="column-title">{{flow.title}}</h2>
        <div class="remove-column glyphicon glyphicon-remove" {{action 'removeFlow'}}></div>
      </div>

      <div class="column-content">
        <ul class="cards">
          {{#each task in flow.tasks}}
            {{partial "flow_task_group"}}
          {{else}}
            <div class="empty-text">{{flow.emptyText}}</div>
          {{/each}}
        </ul>
      </div>
    </li>
  {{/each}}
</ul>
