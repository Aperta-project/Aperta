{{type-ahead
  class="affiliation-field"
  value=newAffiliation.name
  valueProperty="name"
  sourceList=institutions
  placeholder="Affiliation Name"}}

<div class="form-group">
  {{#date-picker-group}}
    {{date-picker type='text'
    role='startPicker'
    date=newAffiliation.startDate
    placeholder='Start Date'}}

    {{date-picker type='text'
    role='endPicker'
    date=newAffiliation.endDate
    placeholder='End Date'}}
  {{/date-picker-group}}

  {{input type='text'
  value=newAffiliation.email
  placeholder='Email Address'
  class='affiliation-field form-control'}}
</div>

<button class="button-secondary button--green" {{action 'commitAffiliation' newAffiliation}}>done</button>
<a class="button-link author-cancel" {{action 'toggleAffiliationForm'}}>cancel</a>
